<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wallet</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/wallet.css">
    <link rel="stylesheet" href="/css/breadcrumbs.css">
</head>
<body>
    <%- include('../partials/user/navbar') %>

    <!-- Main Layout Container -->
    <div class="page-container">
        <!-- Main Layout with Sidebar -->
        <div class="page-layout">
            <!-- Sidebar -->
            <aside class="sidebar">
                <%- include('../partials/user/profileSidebar') %>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <div class="container">
                    <div class="page-header">
                        <div class="header-icon">
                            <span class="material-icons">account_balance_wallet</span>
                        </div>
                        <div class="header-text">
                            <h1>My Wallet</h1>
                            <p>Manage your finances and track your spending</p>
                        </div>
                    </div>

                    <div class="wallet-section">
                        <!-- Stats Grid -->
                        <div class="stats-grid">
                            <!-- Total Balance Card -->
                            <div class="balance-card">
                                <div class="balance-label">Total Balance</div>
                                <div class="balance-amount">
                                    <% if (wallet.balance >= 0) { %>
                                        ₹<%= wallet.balance.toFixed(0) %>
                                    <% } else { %>
                                        -₹<%= Math.abs(wallet.balance).toFixed(0) %>
                                    <% } %>
                                </div>
                                <div class="balance-status">Ready to use</div>
                            </div>


                            
                        </div>

                        <!-- Transactions Section -->
                        <div class="transactions-section">
                            <div class="section-header">
                                <div class="section-title">
                                    <h2>Recent Transactions</h2>
                                    <p>View your wallet transaction history</p>
                                </div>
                            </div>

                            <!-- Filters -->
                            <div class="filters-container">
                                <select name="typeFilter" class="filter-select" onchange="handleFilterChange()">
                                    <option value="all" <%= typeFilter === 'all' ? 'selected' : '' %>>All Types</option>
                                    <option value="credit" <%= typeFilter === 'credit' ? 'selected' : '' %>>Credit</option>
                                    <option value="debit" <%= typeFilter === 'debit' ? 'selected' : '' %>>Debit</option>
                                </select>
                                <select name="sort" class="filter-select" onchange="handleSortChange()">
                                    <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Date (Newest)</option>
                                    <option value="oldest" <%= sort === 'oldest' ? 'selected' : '' %>>Date (Oldest)</option>
                                </select>
                            </div>

                            <!-- Transactions Content -->
                            <% if (transactions && transactions.length > 0) { %>
                                <div class="transactions-table-container">
                                    <table class="transaction-table">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Type</th>
                                                <th>Amount</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% transactions.forEach(tx => { %>
                                                <tr>
                                                    <td><%= new Date(tx.createdAt).toLocaleDateString() %></td>
                                                    <td>
                                                        <span class="transaction-type <%= tx.type %>">
                                                            <%= tx.type.charAt(0).toUpperCase() + tx.type.slice(1) %>
                                                        </span>
                                                    </td>
                                                    <td>₹<%= tx.amount.toFixed(2) %></td>
                                                    <td><%= tx.description %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <div class="pagination">
                                    <% if (currentPage > 1) { %>
                                        <a href="?page=<%= currentPage - 1 %>&typeFilter=<%= typeFilter %>&sort=<%= sort %>">← Previous</a>
                                    <% } %>
                                    <span><%= currentPage %></span>
                                    <% if (currentPage < totalPages) { %>
                                        <a href="?page=<%= currentPage + 1 %>&typeFilter=<%= typeFilter %>&sort=<%= sort %>">Next →</a>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <!-- Empty State -->
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <span class="material-icons">receipt_long</span>
                                    </div>
                                    <h3>No transactions yet</h3>
                                    <p>Your wallet transactions will appear here</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include('../partials/user/userfooter') %>

    <script>
        function handleAddFunds() {
            const button = event.target.closest('.action-btn');
            button.classList.add('loading');
            setTimeout(() => button.classList.remove('loading'), 1000);
        }

        function handleWithdraw() {
            const button = event.target.closest('.action-btn');
            button.classList.add('loading');
            setTimeout(() => button.classList.remove('loading'), 1000);
        }

        function handleCSVExport() {
            const button = event.target.closest('.action-btn');
            button.classList.add('loading');
            setTimeout(() => button.classList.remove('loading'), 1000);
        }

        function handlePDFExport() {
            const button = event.target.closest('.action-btn');
            button.classList.add('loading');
            setTimeout(() => button.classList.remove('loading'), 1000);
        }

        function handleFilterChange() {
            const select = event.target;
            const typeFilter = select.value;
            const currentSort = document.querySelector('select[name="sort"]').value;
            window.location.href = `?page=1&typeFilter=${typeFilter}&sort=${currentSort}`;
        }

        function handleSortChange() {
            const select = event.target;
            const sort = select.value;
            const currentTypeFilter = document.querySelector('select[name="typeFilter"]').value;
            window.location.href = `?page=1&typeFilter=${currentTypeFilter}&sort=${sort}`;
        }

        // Add entrance animations
        document.addEventListener('DOMContentLoaded', function() {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach((element, index) => {
                setTimeout(() => {
                    element.style.animation = `fadeIn 0.5s ease-out ${index * 0.1}s both`;
                }, 100);
            });
        });
    </script>
</body>
</html>
