            <script>
                // Filter functionality
                function filterCoupons(category) {
                    const tabs = document.querySelectorAll('.filter-tab');
                    const cards = document.querySelectorAll('.coupon-card');

                    // Update active tab
                    tabs.forEach(tab => tab.classList.remove('active'));
                    event.target.classList.add('active');

                    // Filter cards
                    cards.forEach(card => {
                        if (category === 'all' || card.dataset.category === category) {
                            card.style.display = 'block';
                            card.classList.add('fade-in');
                        } else {
                            card.style.display = 'none';
                        }
                    });
                }

                // Search functionality
                function searchCoupons() {
                    const searchTerm = event.target.value.toLowerCase();
                    const cards = document.querySelectorAll('.coupon-card');

                    cards.forEach(card => {
                        const brand = card.querySelector('.coupon-brand').textContent.toLowerCase();
                        const description = card.querySelector('.coupon-description').textContent.toLowerCase();
                        const code = card.querySelector('.coupon-code').textContent.toLowerCase();

                        if (brand.includes(searchTerm) || description.includes(searchTerm) || code.includes(searchTerm)) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                }

                // Sort functionality
                function sortCoupons() {
                    const sortBy = event.target.value;
                    const grid = document.getElementById('couponsGrid');
                    const cards = Array.from(grid.children);

                    cards.sort((a, b) => {
                        switch (sortBy) {
                            case 'discount':
                                return parseInt(b.dataset.discount) - parseInt(a.dataset.discount);
                            case 'expiring':
                                return 0;
                            case 'popular':
                                return a.querySelector('.coupon-tag')?.textContent.includes('Popular') ? -1 : 1;
                            default:
                                return 0;
                        }
                    });

                    cards.forEach(card => grid.appendChild(card));
                }

                // Copy coupon code
                function copyCoupon(code) {
                    navigator.clipboard.writeText(code)
                        .then(() => {
                            showToast(`Coupon code ${code} copied to clipboard!`);
                        })
                        .catch(err => {
                            console.error("Failed to copy coupon: ", err);
                            alert("Failed to copy coupon to clipboard.");
                        });
                }

                // Show toast notification
                function showToast(message) {
                    const toast = document.getElementById('toast');
                    toast.textContent = message;
                    toast.classList.add('show');

                    setTimeout(() => {
                        toast.classList.remove('show');
                    }, 3000);
                }

                // Pagination
                function changePage(page) {
                    event.preventDefault();
                    showToast(`Loading page ${page}...`);

                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                }

                // Initialize page
                document.addEventListener('DOMContentLoaded', function () {
                    // Add entrance animations
                    const elements = document.querySelectorAll('.fade-in');
                    elements.forEach((element, index) => {
                        setTimeout(() => {
                            element.style.animation = `fadeIn 0.6s ease-out ${index * 0.1}s both`;
                        }, 100);
                    });

                    // Add hover effects to coupon cards
                    const couponCards = document.querySelectorAll('.coupon-card:not(.expired-coupon)');
                    couponCards.forEach(card => {
                        card.addEventListener('mouseenter', function () {
                            this.style.transform = 'translateY(-2px) scale(1.02)';
                        });

                        card.addEventListener('mouseleave', function () {
                            this.style.transform = 'translateY(0) scale(1)';
                        });
                    });
                });
            </script>
