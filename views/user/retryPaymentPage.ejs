    <!-- Razorpay & SweetAlert2 -->
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function showLoading() {
            document.getElementById('loading').style.display = 'flex';
        }
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        function showSuccess(message) {
            const popup = document.getElementById('successPopup');
            popup.textContent = message;
            popup.classList.add('show');
            setTimeout(() => { popup.classList.remove('show'); }, 3000);
        }


        async function retryPayment(orderId) {
            try {
                showLoading();
                showSuccess('Redirecting to payment gateway...');

                const res = await fetch(`/payment/retryPayment/${orderId}`, {
                    method: 'POST',    // ‚úÖ use POST instead of GET
                    headers: {
                        'Content-Type': 'application/json'
                    },
                   
                });

                const orderData = await res.json();
                console.log(orderData)
                hideLoading();

                if (!orderData.success) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: orderData.message || 'Failed to initiate payment',
                        confirmButtonColor: '#007bff'
                    });
                    return;
                }

                // ‚úÖ use response data, not EJS variables
                const options = {
                    key: orderData.key,
                    amount: orderData.razorpayOrder.amount,
                    currency: orderData.razorpayOrder.currency,
                    name: 'Shoezy',
                    description: 'Order Payment',
                    order_id: orderData.razorpayOrder.id,
                    prefill: {
                        name: orderData.order.address.fullName,
                        contact: orderData.order.address.mobileNumber
                    },
                   
                    handler: function (response) {
                        // verify payment
                        console.log("HI",response)
                        fetch('/payment/verifyPayment', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                razorpay_payment_id: response.razorpay_payment_id,
                                razorpay_order_id: response.razorpay_order_id,
                                razorpay_signature: response.razorpay_signature,
                                UserOrderId: orderData.order._id
                            })
                        })
                            .then(res => res.json())
                            .then(data => {
                                console.log("data from verify",data)
                                if (data.success) {
                                    window.location.href = '/checkout/orderSuccess?orderId='+ data.orderId;
                                } else {
                                    window.location.href = `/payment/orderFailed/${orderData.order._id}`;
                                }
                            });
                    },
                    modal: { escape: false, backdropclose: false }
                };

                const rzp = new Razorpay(options);
                rzp.open();

            } catch (err) {
                hideLoading();
                console.error('Retry Payment Error:', err);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Unable to initiate payment. Try again.',
                    confirmButtonColor: '#007bff'
                });
            }
        }



        function backToOrders() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                window.location.href = '/order';
            }, 800);
        }
    </script>
