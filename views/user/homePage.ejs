                                                    { %>
                                                    <i class="fas fa-heart" style="color: #ff4757;"></i>
                                                    <% } else { %>
                                                        <i class="far fa-heart"></i>
                                                        <% } %>
                                            </div>

                                            <!-- Quick Actions -->
                                            <div class="quick-actions">
                                                <button class="quick-action-btn"
                                                    onclick="event.stopPropagation(); addToCart('<%= product._id %>')"
