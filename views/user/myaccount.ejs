<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <link rel="stylesheet" href="/css/myaccount.css">
    <link rel="stylesheet" href="/css/breadcrumbs.css">
</head>
<body>
    <%- include("../partials/user/navbar") %>

    <!-- Main Layout Container -->
    <div class="page-container">
        <!-- Main Layout with Sidebar -->
        <div class="page-layout">
            <!-- Sidebar -->
            <aside class="sidebar">
                <%- include("../partials/user/profileSidebar") %>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <div class="container">
                    <div class="content-header">
                        <h2>Account Settings</h2>
                        <a href="/profile/edit"><button class="save-changes-btn edit-profile-btn">Edit Profile</button></a>
                    </div>

                    <div class="settings-container">
                        <div class="settings-section profile-card">
                            <div class="profile-info">
                                <div class="profile-details">
                                    <h4>Full Name</h4>
                                    <p><%=user.fullname%></p>
                                    <h4>Email</h4>
                                    <p><%=user.email%></p>
                                    <h4>Phone</h4>
                                    <p><%=user.phone%></p>
                                </div>
                                <div class="profile-image">
                                    <% if (user.profilePicture) { %>
                                        <img src="/uploads<%= user.profilePicture %>?t=<%= Date.now() %>" alt="Profile Image">
                                    <% } else { %>
                                        <div class="default-profile-image"><%= user.fullname.charAt(0).toUpperCase() %></div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3>Account Management</h3>
                            <div class="account-management-buttons">
                               <a href="/profile/address"><button class="save-changes-btn">Manage Addresses</button></a>
                                <a href="/profile/changePassword"><button class="save-changes-btn">Change Password</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include("../partials/user/userfooter") %>
</body>
</html>
