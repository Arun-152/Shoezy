<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <link rel="stylesheet" href="/css/myaccount.css">
    <link rel="stylesheet" href="/css/breadcrumbs.css">
    <style>
        .profile-image {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .profile-image img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #ddd;
        }
        .default-profile-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #007bff;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <%- include("../partials/user/navbar") %>

    <div class="page-container">
        <div class="page-layout">
            <aside class="sidebar">
                <%- include("../partials/user/profileSidebar") %>
            </aside>
            <main class="main-content">
                <div class="container">
                    <div class="content-header">
                        <h2>Account Settings</h2>
                        <a href="/profile/edit"><button class="save-changes-btn edit-profile-btn">Edit Profile</button></a>
                    </div>
                    <div class="settings-container">
                        <div class="settings-section profile-card">
                            <div class="profile-info">
                                <div class="profile-details">
                                    <h4>Full Name</h4>
                                    <p><%= user.fullname || 'Not provided' %></p>
                                    <h4>Email</h4>
                                    <p><%= user.email || 'Not provided' %></p>
                                    <h4>Phone</h4>
                                    <p><%= user.phone || 'Not provided' %></p>
                                </div>
                                <div class="profile-image">
                                    <% if (user.profilePicture && user.profilePicture.trim() !== '') { %>
                                        <img src="<%= user.profilePicture%>" 
                                             alt="Profile Image" 
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'; console.error('Failed to load image: <%= user.profilePicture %>');">
                                        <div class="default-profile-image" style="display: none;">
                                            <%= user.fullname ? user.fullname.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                    <% } else { %>
                                        <div class="default-profile-image">
                                            <%= user.fullname ? user.fullname.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="settings-section">
                            <h3>Account Management</h3>
                            <div class="account-management-buttons">
                                <a href="/profile/address"><button class="save-changes-btn">Manage Addresses</button></a>
                                <a href="/profile/changePassword"><button class="save-changes-btn">Change Password</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include("../partials/user/userfooter") %>

    <script>
        document.querySelectorAll('.profile-image img').forEach(img => {
            img.addEventListener('error', () => console.error('Image failed to load:', img.src));
        });
    </script>
</body>
</html>