      transition: color 0.3s ease;
    }

    a:hover {
      color: #5a67d8 !important;
      text-decoration: underline !important;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        height: auto;
        max-width: 400px;
      }

      .left {
        padding: 30px;
        min-height: 250px;
      }

      .brand {
        font-size: 2.5rem;
        margin-bottom: 15px;
      }

      .circle {
        width: 200px;
