<body>
    <header class="header">
        <nav class="navbar">
            <div class="logo">
                <h1><a href="/home" style="text-decoration: none; color: inherit;">Shoezy</a></h1>
            </div>
            <ul class="nav-links">
                <li><a href="/home">Home</a></li>
                <li><a href="<%= typeof user !== 'undefined' && user ? '/shop' : '#' %>" onclick="<%= typeof user !== 'undefined' && user ? '' : 'redirectToLogin()' %>">Shop</a></li>
                <li><a href="<%= typeof user !== 'undefined' && user ? '/order' : '#' %>" onclick="<%= typeof user !== 'undefined' && user ? '' : 'redirectToLogin()' %>">Orders</a></li>

                <!-- Show Login link only when user is not logged in -->
                <% if (typeof user === 'undefined' || !user) { %>
                    <li><a href="/login" class="login-link">Login</a></li>
                <% } %>
            </ul>
            <div class="nav-icons">
                <!-- Show Wishlist, Cart, and Profile only when user is logged in -->
                <% if (typeof user !== 'undefined' && user) { %>
                    <!-- Wishlist Icon -->
                    <span class="nav-icon wishlist-icon" title="Wishlist">
                        <a href="/wishlist" style="color: inherit; text-decoration: none;">
                            <i class="fas fa-heart"></i>
                            <span class="icon-badge" id="wishlist-count">0</span>
                        </a>
                    </span>

                    <!-- Cart Icon -->
                    <span class="nav-icon cart-icon" title="Shopping Cart">
                        <a href="/cart" style="color: inherit; text-decoration: none;">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="icon-badge" id="cart-count">0</span>
                        </a>
                    </span>

                    <!-- User Profile Icon -->
                    <span class="nav-icon profile-icon" title="Profile">
                        <a href="/profile" style="color: inherit; text-decoration: none;">
                            <i class="fas fa-user"></i>
                        </a>
                    </span>
                <% } %>
            </div>
        </nav>
    </header>

