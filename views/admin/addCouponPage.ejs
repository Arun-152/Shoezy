<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Coupon - Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/adminOrderDetailsPage.css" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }

    .coupon-form-container {
      max-width: 900px;
      margin: 0;
      padding: 0;
      background: white;
      border-radius: 16px;
      border: none;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      overflow: hidden;
      position: relative;
    }

    .input-error {
      color: #e53e3e;
      font-size: 14px;
      margin-top: 8px;
    }

    .coupon-form-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .form-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 32px 40px;
      color: white;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .form-header::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
      background-size: 30px 30px;
      animation: float 20s ease-in-out infinite;
    }

    @keyframes float {

      0%,
      100% {
        transform: translate(0, 0) rotate(0deg);
      }

      50% {
        transform: translate(-20px, -20px) rotate(180deg);
      }
    }

    .form-header h1 {
      margin: 0;
      font-size: 28px;
      font-weight: 700;
      letter-spacing: -0.5px;
      position: relative;
      z-index: 1;
    }

    .form-header p {
      margin: 8px 0 0 0;
      opacity: 0.9;
      font-size: 16px;
      position: relative;
      z-index: 1;
    }

    .form-content {
      padding: 40px;
    }

    .form-section {
      margin-bottom: 32px;
      padding: 24px;
      background: #fafbfc;
      border-radius: 12px;
      border: 1px solid #e1e5e9;
      transition: all 0.3s ease;
      position: relative;
    }

    .form-section:hover {
      border-color: #667eea;
      box-shadow: 0 8px 25px -8px rgba(102, 126, 234, 0.3);
    }

    .section-title {
      font-size: 18px;
      font-weight: 600;
      color: #2d3748;
      margin: 0 0 20px 0;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .section-title::before {
      content: '';
      width: 4px;
      height: 24px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-radius: 2px;
    }

    .form-group {
      margin-bottom: 24px;
      position: relative;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: #4a5568;
      font-size: 14px;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: color 0.3s ease;
    }

    .label-icon {
      font-size: 16px;
      width: 20px;
      text-align: center;
    }

    .form-input {
      width: 100%;
      padding: 14px 16px;
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      font-size: 14px;
      color: #2d3748;
      background: white;
      transition: all 0.3s ease;
      font-family: inherit;
    }

    .form-input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
      transform: translateY(-2px);
    }

    .form-input:valid {
      border-color: #48bb78;
    }

    .form-input::placeholder {
      color: #a0aec0;
    }

    .discount-type-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .radio-option {
      position: relative;
    }

    .radio-input {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }

    .radio-label {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      font-weight: 600;
      color: #4a5568;
      background: white;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .radio-label::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
      transition: left 0.5s ease;
    }

    .radio-input:checked+.radio-label {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-color: #667eea;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px -8px rgba(102, 126, 234, 0.5);
    }

    .radio-input:checked+.radio-label::before {
      left: 100%;
    }

    .amount-input-container {
      position: relative;
    }

    .currency-symbol {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: #667eea;
      font-weight: 700;
      font-size: 16px;
      z-index: 2;
      transition: all 0.3s ease;
    }

    .amount-input {
      padding-left: 40px !important;
    }

    .checkbox-group {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .checkbox-input {
      width: 20px;
      height: 20px;
      border: 2px solid #e2e8f0;
      border-radius: 6px;
      background: white;
      cursor: pointer;
      position: relative;
      transition: all 0.3s ease;
    }

    .checkbox-input:checked {
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-color: #667eea;
    }

    .checkbox-input:checked::after {
      content: '✓';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 12px;
      font-weight: bold;
    }

    .checkbox-label {
      font-weight: 500;
      color: #4a5568;
      cursor: pointer;
      user-select: none;
      transition: color 0.3s ease;
    }

    .checkbox-input:checked+.checkbox-label {
      color: #667eea;
      font-weight: 600;
    }

    .usage-limits {
      background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
      border: 2px solid #e2e8f0;
      padding: 24px;
      border-radius: 12px;
      margin-bottom: 24px;
      position: relative;
      overflow: hidden;
    }

    .usage-limits::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .usage-limits-header {
      font-weight: 700;
      color: #2d3748;
      font-size: 16px;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .usage-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    @media (max-width: 768px) {
      .usage-row {
        grid-template-columns: 1fr;
      }
    }

    .help-text {
      font-size: 12px;
      color: #718096;
      margin-top: 6px;
      font-style: italic;
      line-height: 1.4;
    }

    .form-actions {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 40px;
      padding-top: 32px;
      border-top: 2px solid #e2e8f0;
    }

    .btn {
      padding: 14px 32px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
      border: none;
      position: relative;
      overflow: hidden;
      min-width: 160px;
      justify-content: center;
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: 2px solid transparent;
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 30px -10px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
      background: white;
      color: #667eea;
      border: 2px solid #667eea;
    }

    .btn-secondary:hover {
      background: #f7fafc;
      transform: translateY(-3px);
      box-shadow: 0 15px 30px -10px rgba(102, 126, 234, 0.2);
    }

    .date-input {
      color-scheme: light;
    }

    .date-input::-webkit-calendar-picker-indicator {
      background: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='%23667eea'%3e%3cpath fill-rule='evenodd' d='M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z' clip-rule='evenodd'/%3e%3c/svg%3e") no-repeat;
      background-size: 20px;
      cursor: pointer;
    }

    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.9);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 4px solid #e2e8f0;
      border-top: 4px solid #667eea;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .success-message {
      position: fixed;
      top: 20px;
      right: 20px;
      background: linear-gradient(135deg, #48bb78, #38a169);
      color: white;
      padding: 16px 24px;
      border-radius: 12px;
      box-shadow: 0 10px 25px -5px rgba(72, 187, 120, 0.3);
      display: none;
      align-items: center;
      gap: 12px;
      z-index: 10000;
      animation: slideIn 0.5s ease;
    }

    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }

      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    @media (max-width: 768px) {
      .form-content {
        padding: 20px;
      }

      .form-header {
        padding: 24px 20px;
      }

      .form-header h1 {
        font-size: 24px;
      }

      .discount-type-container {
        grid-template-columns: 1fr;
      }

      .form-actions {
        flex-direction: column;
        align-items: stretch;
      }

      .btn {
        width: 100%;
      }
    }

    .form-input:invalid {
      border-color: #e53e3e;
    }

    .form-input:invalid:focus {
      box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.1);
    }

    .tooltip {
      position: relative;
      cursor: help;
    }

    .tooltip::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: 125%;
      left: 50%;
      transform: translateX(-50%);
      background: #2d3748;
      color: white;
      padding: 8px 12px;
      border-radius: 8px;
      font-size: 12px;
      white-space: nowrap;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
      z-index: 1000;
    }

    .tooltip:hover::after {
      opacity: 1;
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <%- include('../partials/admin/sidebar') %>

      <!-- Main Content -->
      <main class="main-content">
        <header class="header">
          <div class="header-left">
            <button class="menu-toggle" id="menuToggle">
              <i class="fas fa-bars"></i>
            </button>
          </div>
          <div class="header-right">
            <div class="notification">
              <i class="fas fa-bell"></i>
            </div>
            <div class="admin-profile">
              <i class="fas fa-user-circle"></i>
              <span>ADMIN</span>
            </div>
          </div>
        </header>

        <!-- Breadcrumb Navigation -->
        <div class="breadcrumb">
          <div class="breadcrumb-nav">
            <a href="/admin/dashboard">
              <i class="fas fa-home"></i> Dashboard
            </a>
            <span class="separator">/</span>
            <a href="/admin/coupons">Coupons</a>
            <span class="separator">/</span>
            <span class="current">Add Coupon</span>
          </div>
        </div>

        <section class="page-content">
          <div class="coupon-form-container">
            <!-- Form Header -->
            <div class="form-header">
              <h1><i class="fas fa-ticket-alt"></i> Create New Coupon</h1>
              <p>Design attractive discount offers to boost customer engagement</p>
            </div>

            <!-- Form Content -->
            <div class="form-content">
              <div class="input-error" id="formGeneralError"></div>
              <form id="couponForm">
                <!-- Basic Information Section -->
                <div class="form-section">
                  <div class="section-title">
                    <i class="fas fa-info-circle"></i> Basic Information
                  </div>

                  <div class="form-group">
                    <label class="form-label" for="couponCode">
                      <i class="fas fa-ticket-alt label-icon"></i> Coupon Code *
                    </label>
                    <input type="text" id="couponCode" name="couponCode" class="form-input"
                      placeholder="e.g., WELCOME20, SAVE50" maxlength="20" />
                    <div class="input-error" id="couponCodeError"></div>
                  </div>

                  <div class="form-group">
                    <label class="form-label">
                      <i class="fas fa-tags label-icon"></i> Discount Type *
                    </label>
                    <div class="discount-type-container">
                      <div class="radio-option">
                        <input type="radio" id="flat" name="discountType" value="flat" class="radio-input" checked />
                        <label for="flat" class="radio-label">
                          <i class="fas fa-rupee-sign"></i> Flat Amount (₹)
                        </label>
                      </div>
                      <div class="radio-option">
                        <input type="radio" id="percentage" name="discountType" value="percentage"
                          class="radio-input" />
                        <label for="percentage" class="radio-label">
                          <i class="fas fa-percentage"></i> Percentage (%)
                        </label>
                      </div>
                    </div>
                    <div class="input-error" id="discountTypeError"></div>
                  </div>

                  <div class="form-group">
                    <label class="form-label" for="discountAmount">
                      <i class="fas fa-calculator label-icon"></i> Discount Amount *
                      <span class="tooltip" data-tooltip="Enter the discount value based on selected type">
                        <i class="fas fa-question-circle" style="color: #a0aec0; font-size: 12px;"></i>
                      </span>
                    </label>
                    <div class="amount-input-container">
                      <span class="currency-symbol" id="currencySymbol">₹</span>
                      <input type="number" id="discountAmount" name="discountAmount" class="form-input amount-input"
                        placeholder="Enter discount amount" step="0.01" />
                    </div>
                    <div class="input-error" id="discountAmountError"></div>
                  </div>

                  <div class="form-group">
                    <label class="form-label" for="minOrderAmount">
                      <i class="fas fa-shopping-cart label-icon"></i> Minimum Order Amount *
                    </label>
                    <input type="number" id="minOrderAmount" name="minOrderAmount" class="form-input"
                      placeholder="₹0 for no minimum" step="0.01" />
                    <div class="input-error" id="minOrderAmountError"></div>
                  </div>
                </div>

                <!-- Date Settings Section -->
                <div class="form-section">
                  <div class="section-title">
                    <i class="fas fa-calendar-alt"></i> Validity Period
                  </div>

                  <div class="form-group">
                    <label class="form-label" for="startDate">
                      <i class="fas fa-calendar-plus label-icon"></i> Start Date *
                    </label>
                    <input type="date" id="startDate" name="startDate" class="form-input date-input" />
                    <div class="input-error" id="startDateError"></div>
                  </div>

                  <div class="form-group">
                    <label class="form-label" for="expirationDate">
                      <i class="fas fa-calendar-minus label-icon"></i> Expiration Date *
                    </label>
                    <input type="date" id="expirationDate" name="expirationDate" class="form-input date-input" />
                    <div class="input-error" id="expirationDateError"></div>
                  </div>
                </div>

                <!-- Applicability Section -->
                <div class="form-section">
                  <div class="section-title">
                    <i class="fas fa-bullseye"></i> Applicability Settings
                  </div>

                  <div class="form-group">
                    <label class="form-label">
                      <i class="fas fa-list label-icon"></i> Applicable Categories *
                    </label>
                    <div class="checkbox-group">
                      <div class="checkbox-item">
                        <input type="checkbox" id="allCategories" name="allCategories" class="checkbox-input" checked />
                        <label for="allCategories" class="checkbox-label">
                          <i class="fas fa-globe"></i> Apply to All Categories
                        </label>
                      </div>
                    </div>
                    <div id="categoryList"
                      style="display: none; margin-top: 16px; padding: 12px; background: #f7fafc; border-radius: 8px; border: 1px solid #e2e8f0;">
                      <% if (categories && categories.length> 0) { %>
                        <% categories.forEach(function(category) { %>
                          <div class="checkbox-item">
                            <input type="checkbox" id="cat_<%= category._id %>" name="applicableCategories"
                              value="<%= category._id %>" class="checkbox-input" />
                            <label for="cat_<%= category._id %>" class="checkbox-label">
                              <%= category.name %>
                            </label>
                          </div>
                          <% }); %>
                            <% } else { %>
                              <p>No categories available.</p>
                              <% } %>
                    </div>
                    <div class="input-error" id="applicableCategoriesError"></div>
                  </div>

                  <div class="form-group">
                    <label class="form-label">
                      <i class="fas fa-box label-icon"></i> Applicable Products *
                    </label>
                    <div class="checkbox-group">
                      <div class="checkbox-item">
                        <input type="checkbox" id="allProducts" name="allProducts" class="checkbox-input" checked />
                        <label for="allProducts" class="checkbox-label">
                          <i class="fas fa-globe"></i> Apply to All Products
                        </label>
                      </div>
                    </div>
                    <div id="productListContainer"
                      style="display: none; margin-top: 16px; padding: 12px; background: #f7fafc; border-radius: 8px; border: 1px solid #e2e8f0;">
                      <input type="text" id="productSearch" class="form-input" placeholder="Search products..."
                        style="margin-bottom: 12px;" />
                      <div id="productList">
                        <% if (products && products.length> 0) { %>
                          <% products.forEach(function(product) { %>
                            <div class="checkbox-item">
                              <input type="checkbox" id="prod_<%= product._id %>" name="applicableProducts"
                                value="<%= product._id %>" class="checkbox-input" />
                              <label for="prod_<%= product._id %>" class="checkbox-label">
                                <%= product.productName %>
                              </label>
                            </div>
                            <% }); %>
                              <% } else { %>
                                <p>No products available.</p>
                                <% } %>
                      </div>
                    </div>
                    <div class="input-error" id="applicableProductsError"></div>
                  </div>
                </div>

                <!-- Usage Limits Section -->
                <div class="usage-limits">
                  <div class="usage-limits-header">
                    <i class="fas fa-chart-bar"></i> Usage Limits & Restrictions
                  </div>
                  <div class="usage-row">
                    <div class="usage-col">
                      <label for="maxUsesPerUser" class="form-label">
                        <i class="fas fa-user label-icon"></i> Max Uses Per User
                      </label>
                      <input type="number" id="maxUsesPerUser" name="maxUsesPerUser" class="form-input" value="1" />
                      <div class="input-error" id="maxUsesPerUserError"></div>
                      <div class="help-text">
                        <i class="fas fa-info-circle"></i> How many times a single user can use this coupon (minimum: 1)
                      </div>
                    </div>
                    <div class="usage-col">
                      <label for="totalUsageLimit" class="form-label">
                        <i class="fas fa-users label-icon"></i> Total Usage Limit
                      </label>
                      <input type="number" id="totalUsageLimit" name="totalUsageLimit" class="form-input"
                        placeholder="Unlimited" />
                      <div class="input-error" id="totalUsageLimitError"></div>
                      <div class="help-text">
                        <i class="fas fa-info-circle"></i> Maximum total uses across all users (leave empty for
                        unlimited)
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Status Section -->
                <div class="form-section">
                  <div class="section-title">
                    <i class="fas fa-toggle-on"></i> Status Settings
                  </div>

                  <div class="form-group">
                    <div class="checkbox-item">
                      <input type="checkbox" id="activeStatus" name="activeStatus" class="checkbox-input" checked />
                      <label for="activeStatus" class="checkbox-label">
                        <i class="fas fa-check-circle"></i> Active Status (Coupon will be immediately available)
                      </label>
                    </div>
                    <div class="input-error" id="activeStatusError"></div>
                  </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Create Coupon
                  </button>
                  <button type="button" class="btn btn-secondary" onclick="window.location='/admin/coupons'">
                    <i class="fas fa-arrow-left"></i> Back to List
                  </button>

                </div>
              </form>
            </div>
          </div>
        </section>
      </main>
  </div>

  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner"></div>
  </div>

  <!-- Success Message -->
  <div class="success-message" id="successMessage">
    <i class="fas fa-check-circle"></i>
    <span>Coupon created successfully!</span>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Set today's date as default for start date
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('startDate').value = today;

      // Set minimum date for expiration (startDate + 1)
      updateExpirationMin();

      document.getElementById('startDate').addEventListener('change', updateExpirationMin);

      function updateExpirationMin() {
        const startDateInput = document.getElementById('startDate');
        const expirationInput = document.getElementById('expirationDate');
        const startDate = new Date(startDateInput.value);
        startDate.setDate(startDate.getDate() + 1);
        expirationInput.min = startDate.toISOString().split('T')[0];
      }

      // Handle discount type change
      document.querySelectorAll('input[name="discountType"]').forEach(radio => {
        radio.addEventListener('change', function () {
          const currencySymbol = document.getElementById('currencySymbol');
          const discountAmount = document.getElementById('discountAmount');

          if (this.value === 'flat') {
            currencySymbol.textContent = '₹';
            discountAmount.placeholder = 'Enter amount in rupees';
          } else {
            currencySymbol.textContent = '%';
            discountAmount.placeholder = 'Enter percentage (1-100)';
          }

          currencySymbol.style.transform = 'scale(1.2)';
          setTimeout(() => {
            currencySymbol.style.transform = 'scale(1)';
          }, 200);
        });
      });

      // Coupon code formatting
      document.getElementById('couponCode').addEventListener('input', function () {
        this.value = this.value.toUpperCase().replace(/\s/g, '');
      });

      // Toggle category list
      const allCategoriesCheckbox = document.getElementById('allCategories');
      const categoryList = document.getElementById('categoryList');
      allCategoriesCheckbox.addEventListener('change', function () {
        categoryList.style.display = this.checked ? 'none' : 'block';
      });

      // Toggle product list
      const allProductsCheckbox = document.getElementById('allProducts');
      const productListContainer = document.getElementById('productListContainer');
      allProductsCheckbox.addEventListener('change', function () {
        productListContainer.style.display = this.checked ? 'none' : 'block';
      });

      // Product search
      const productSearch = document.getElementById('productSearch');
      if (productSearch) {
        productSearch.addEventListener('input', function () {
          const filter = this.value.toLowerCase();
          const items = document.querySelectorAll('#productList .checkbox-item');
          items.forEach(item => {
            const text = item.querySelector('.checkbox-label').textContent.toLowerCase();
            item.style.display = text.includes(filter) ? 'flex' : 'none';
          });
        });
      }

      // Form submission with backend validation error feedback
      document.getElementById('couponForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        showLoading();

        // Clear all previous errors
        document.querySelectorAll('.input-error').forEach(el => el.textContent = '');

        // Gather form data
        const couponData = {
          couponCode: document.getElementById('couponCode').value.trim(),
          discountType: document.querySelector('input[name="discountType"]:checked').value,
          offerPrice: document.getElementById('discountAmount').value.trim(),
          minimumPrice: document.getElementById('minOrderAmount').value.trim(),
          startDate: document.getElementById('startDate').value,
          expireOn: document.getElementById('expirationDate').value,
          isAllCategories: document.getElementById('allCategories').checked,
          isAllProducts: document.getElementById('allProducts').checked,
          applicableCategories: document.getElementById('allCategories').checked ? [] : Array.from(document.querySelectorAll('input[name="applicableCategories"]:checked')).map(el => el.value),
          applicableProducts: document.getElementById('allProducts').checked ? [] : Array.from(document.querySelectorAll('input[name="applicableProducts"]:checked')).map(el => el.value),
          maxUsesPerUser: document.getElementById('maxUsesPerUser').value.trim(),
          totalUsageLimit: document.getElementById('totalUsageLimit').value.trim(),
          islist: document.getElementById('activeStatus').checked
        };

        try {
          const response = await fetch('/admin/coupons/addcoupon', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(couponData)
          });

          const data = await response.json();

          if (!response.ok) {
            showErrorMessages(data || { message: 'Validation failed' });
            hideLoading();
            return;
          } else {
            // ✅ Success case
            Swal.fire({
              icon: 'success',
              title: 'Success!',
              text: data.message || 'Operation completed successfully',
              showConfirmButton: false,
              timer: 1500
            }).then(() => {
              window.location.href = '/admin/coupons';
            });

            hideLoading();
          }


          this.reset();
          document.getElementById('startDate').value = today;
          document.getElementById('currencySymbol').textContent = '₹';
          document.getElementById('flat').checked = true;

          if (data.redirect) {
            window.location.href = data.redirect;
          }
        } catch (err) {
          showError('Something went wrong. Please try again.');
          hideLoading();
        }
      });

      function showErrorMessages(data) {
        // Clear previous errors
        document.querySelectorAll('.input-error').forEach(el => el.textContent = '');

        if (!data) {
          setErrorOnField('formGeneralError', 'Unknown error occurred');
          return;
        }

        if (data.fieldErrors) {
          // Show each field-specific error
          Object.entries(data.fieldErrors).forEach(([field, errorMsg]) => {
            const errorFieldMap = {
              couponCode: 'couponCodeError',
              offerPrice: 'discountAmountError',
              minimumPrice: 'minOrderAmountError',
              startDate: 'startDateError',
              expireOn: 'expirationDateError',
              discountType: 'discountTypeError',
              maxUsesPerUser: 'maxUsesPerUserError',
              totalUsageLimit: 'totalUsageLimitError',
              applicableCategories: 'applicableCategoriesError',
              applicableProducts: 'applicableProductsError'
            };

            const errorFieldId = errorFieldMap[field] || 'formGeneralError';
            setErrorOnField(errorFieldId, errorMsg);
          });
          // Scroll to the first error field
          const firstError = document.querySelector('.input-error:not(:empty)');
          if (firstError) {
            firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
          return;
        }

        // Fallback to message-based error handling
        const message = data.message || '';
        if (message === "All required fields must be filled") {
          setErrorOnField('formGeneralError', message);
          scrollToErrorField('couponCode');
        } else if (message.toLowerCase().includes('coupon already exist')) {
          setErrorOnField('couponCodeError', message);
          scrollToErrorField('couponCode');
        } else if (message.toLowerCase().includes('start date')) {
          setErrorOnField('startDateError', message);
          scrollToErrorField('startDate');
        } else if (message.toLowerCase().includes('expiration date')) {
          setErrorOnField('expirationDateError', message);
          scrollToErrorField('expirationDate');
        } else if (message.toLowerCase().includes('invalid discount type')) {
          setErrorOnField('discountTypeError', message);
        } else if (message.toLowerCase().includes('offer price must be greater')) {
          setErrorOnField('discountAmountError', message);
          scrollToErrorField('discountAmount');
        } else if (message.toLowerCase().includes('maximum uses per user')) {
          setErrorOnField('maxUsesPerUserError', message);
          scrollToErrorField('maxUsesPerUser');
        } else if (message.toLowerCase().includes('total usage limit')) {
          setErrorOnField('totalUsageLimitError', message);
          scrollToErrorField('totalUsageLimit');
        } else if (message.toLowerCase().includes('select at least one category')) {
          setErrorOnField('applicableCategoriesError', message);
        } else if (message.toLowerCase().includes('select at least one product')) {
          setErrorOnField('applicableProductsError', message);
        } else if (message.toLowerCase().includes('minimum order amount')) {
          setErrorOnField('minOrderAmountError', message);
          scrollToErrorField('minOrderAmount');
        } else {
          setErrorOnField('formGeneralError', message);
        }
      }

      function setErrorOnField(fieldId, msg) {
        const el = document.getElementById(fieldId);
        if (el) el.textContent = msg;
      }

      function scrollToErrorField(fieldId) {
        const el = document.getElementById(fieldId.replace('Error', '')) || document.getElementById(fieldId);
        if (el) {
          el.scrollIntoView({ behavior: 'smooth', block: 'center' });
          el.focus();
        }
      }

      function showLoading() {
        document.getElementById('loadingOverlay').style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }

      function hideLoading() {
        document.getElementById('loadingOverlay').style.display = 'none';
        document.body.style.overflow = 'auto';
      }



      function showError(message) {
        setErrorOnField('formGeneralError', message);
      }

      // Back button confirmation
      window.goBack = function () {
        if (confirm('Are you sure you want to go back? Any unsaved changes will be lost.')) {
          window.location.href = '/admin/coupons';
        }
      };
    });
  </script>
</body>

</html>