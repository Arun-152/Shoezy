<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - #<%= order.orderNumber %></title>
    <link rel="stylesheet" href="/css/adminOrderDetailsPage.css">
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header">
            <div class="header-content">
                <div class="header-left">
                    <h1>
                        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                        Order Details
                    </h1>
                    <div class="breadcrumb">
                        <a href="/admin/dashboard">Dashboard</a> /
                        <a href="/admin/orders">Orders</a> /
                        <span>Order #<%= order.orderNumber %></span>
                    </div>
                </div>
            </div>
        </div>


        <!-- Order Information -->
        <div class="info-card">
            <div class="card-header">
                <h3>
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Order Information
                </h3>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="label">Order ID:</span>
                    <span class="value"><%= order.orderNumber %></span>
                </div>
                <div class="info-row">
                    <span class="label">Date:</span>
                    <span class="value"><%= new Date(order.createdAt).toLocaleString() %></span>
                </div>
                <div class="info-row">
                    <span class="label">Customer:</span>
                    <span class="value"><%= order.userId.fullname %></span>
                </div>
                <div class="info-row">
                    <span class="label">Status:</span>
                    <span class="value status-badge <%= order.orderStatus.toLowerCase() %>">
                        <%= order.orderStatus %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Customer Details -->
        <div class="info-card">
            <div class="card-header">
                <h3>
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    Customer Details
                </h3>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="label">Email:</span>
                    <span class="value"><%= order.userId.email %></span>
                </div>
                <div class="info-row">
                    <span class="label">Phone:</span>
                    <span class="value"><%= order.address.mobileNumber %></span>
                </div>
                <div class="info-row">
                    <span class="label">Address:</span>
                    <span class="value">
                        <%= order.address.address %>, <%= order.address.city %>, <%= order.address.district %>, 
                        <%= order.address.state %> <%= order.address.pinCode %>
                        <%= order.address.landmark ? `, Landmark: ₹{order.address.landmark}` : '' %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="info-card">
            <div class="card-header">
                <h3>
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-8c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Payment Summary
                </h3>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="label">Subtotal:</span>
                    <span class="value">₹<%= order.items.reduce((sum, item) => sum + item.totalPrice, 0).toFixed(2) %></span>
                </div>
                <div class="info-row">
                    <span class="label">Shipping:</span>
                    <span class="value">₹0</span>
                </div>
                <div class="info-row total-row">
                    <span class="label">Total:</span>
                    <span class="value">₹<%= order.totalAmount.toFixed(2) %></span>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="table-container">
            <div class="table-header">
                <h2>
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    Order Items
                </h2>
            </div>
            <div class="table-wrapper">
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.items.forEach(item => { %>
                            <tr>
                                <td>
                                    <div class="product-info">
                                        <% if (item.productId.image && item.productId.image.length > 0) { %>
                                            <div class="product-image">
                                                <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.name %>">
                                            </div>
                                        <% } %>
                                        <div class="product-details">
                                            <div class="product-name"><%= item.productId.name %></div>
                                            <div class="product-sku">SKU: <%= item.productId.sku || 'N/A' %></div>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="quantity"><%= item.quantity %></span></td>
                                <td class="price">₹<%= item.price.toFixed(2) %></td>
                                <td class="total">₹<%= item.totalPrice.toFixed(2) %></td>
                                <td>
                                    <span class="status-badge <%= item.status.toLowerCase() %>">
                                        <%= item.status %>
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-icon" onclick="window.location.href='/admin/products/<%= item.productId._id %>'">
                                        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Order Timeline -->
        <div class="timeline-container">
            <div class="timeline-header">
                <h3>
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l1.5 1.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Order Timeline
                </h3>
            </div>
            <div class="timeline">
                <% order.statusHistory.forEach(history => { %>
                    <div class="timeline-item <%= history.status.toLowerCase() === order.orderStatus.toLowerCase() ? 'active' : 'completed' %>">
                        <div class="timeline-marker"></div>
                        <div class="timeline-title"><%= history.status %></div>
                        <div class="timeline-date"><%= new Date(history.date).toLocaleString() %></div>
                        <% if (history.description) { %>
                            <div class="timeline-description"><%= history.description %></div>
                        <% } %>
                    </div>
                <% }) %>
                <% if (order.orderStatus.toLowerCase() !== 'delivered') { %>
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-title">Delivered</div>
                        <div class="timeline-date">Pending</div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>