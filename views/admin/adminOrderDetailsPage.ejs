<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - #<%= order.orderNumber %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/adminOrderDetailsPage.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <div class="header-left">
                    <button class="menu-toggle" id="menuToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                <div class="header-right">
                    <div class="notification">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div class="admin-profile">
                        <i class="fas fa-user-circle"></i>
                        <span>ADMIN</span>
                    </div>
                </div>
            </header>

            <!-- Breadcrumb Navigation -->
             <!-- Breadcrumb Navigation -->
<div class="breadcrumb">
    <div class="breadcrumb-nav">
        <a href="/admin/dashboard">
            <i class="fas fa-home"></i> Dashboard
        </a>
        <span class="separator">/</span>
        <a href="/admin/orders">Orders</a>
        <span class="separator">/</span>
        <span class="current">Order Details</span>
    </div>
</div>


            <section class="page-content">
                <div class="page-header">
                    <h1>Order Details - #<%= order.orderNumber %></h1>
                    <p class="subtitle">Manage and track order information with ease</p>
                </div>

                <!-- Order Information Section -->
                <div class="controls-section">
                    <div class="info-card">
                        <div class="card-header">
                            <h3>
                                <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Order Information
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="info-row">
                                <span class="label">Order ID:</span>
                                <span class="value"><%= order.orderNumber %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Date:</span>
                                <span class="value"><%= new Date(order.createdAt).toLocaleString() %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Customer:</span>
                                <span class="value"><%= order.userId.fullname %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Status:</span>
                                <span class="value status-badge <%= order.orderStatus.toLowerCase() %>">
                                    <%= order.orderStatus %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Details Section -->
                <div class="controls-section">
                    <div class="info-card">
                        <div class="card-header">
                            <h3>
                                <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Customer Details
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="info-row">
                                <span class="label">Email:</span>
                                <span class="value"><%= order.userId.email %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Phone:</span>
                                <span class="value"><%= order.address.mobileNumber %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Address:</span>
                                <span class="value">
                                    <%= order.address.address %>, <%= order.address.city %>, <%= order.address.district %>, 
                                    <%= order.address.state %> <%= order.address.pinCode %>
                                    <%= order.address.landmark ? `, Landmark: ${order.address.landmark}` : '' %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Summary Section -->
                <div class="controls-section">
                    <div class="info-card">
                        <div class="card-header">
                            <h3>
                                <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-8c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Payment Summary
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="info-row">
                                <span class="label">Subtotal:</span>
                                <span class="value">₹<%= totals.subtotal.toFixed(2) %></span>
                            </div>
                            <% if (order.couponId && order.discountAmount > 0) { %>
                            <div class="info-row">
                                <span class="label">Coupon Discount:</span>
                                <span class="value discount">-₹<%= totals.couponDiscount.toFixed(2) %></span>
                            </div>
                            <div class="info-row">
                                <span class="label">Coupon Code:</span>
                                <span class="value"><%= order.couponCode || order.couponId.name %></span>
                            </div>
                            <% } %>
                            <div class="info-row total-row">
                                <span class="label">Total:</span>
                                <span class="value">₹<%= totals.finalAmount.toFixed(2) %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items Section -->
                <div class="table-section">
                    <div class="table-container">
                        <table class="customers-table order-table">
                            <thead>
                                <tr>
                                    <th class="table-header">Product</th>
                                    <th class="table-header">Quantity</th>
                                    <th class="table-header">Price</th>
                                    <th class="table-header">Total</th>
                                    <th class="table-header">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.items.forEach(item => { %>
                                    <tr class="table-row">
                                        <td>
                                            <div class="product-info">
                                                <% if (item.productId.image && item.productId.image.length > 0) { %>
                                                    <div class="product-image">
                                                        <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.productName %>">
                                                    </div>
                                                <% } %>
                                                <div class="product-details">
                                                    <div class="product-name"><%= item.productId.productName %></div>
                                                    <div class="product-sku">SKU: <%= item.productId.sku || 'N/A' %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="quantity"><%= item.quantity %></span></td>
                                        <td class="price">₹<%= item.price.toFixed(2) %></td>
                                        <td class="total">₹<%= (item.price * item.quantity).toFixed(2) %></td>
                                        <td>
                                            <span class="status-badge <%= item.status.toLowerCase() %>">
                                                <%= item.status %>
                                            </span>
                                        </td>
                                        
                                    </tr>
                                <% }) %>
                            </tbody>
                          
                        </table>
                    </div>
                </div>

                <!-- Order Timeline Section -->  
                <div class="timeline-section">
                    <div class="timeline-container">
                        <div class="section-header">
                            <h3>Order Timeline</h3>
                        </div>
                        <div class="timeline">
                            <% 
                                const statuses = ['Ordered', 'Pending', 'Processing', 'Shipped', 'Delivered'];
                                const itemStatuses = order.items.map(item => item.status);
                                const hasDelivered = itemStatuses.includes('Delivered');
                                const allReturned = itemStatuses.every(s => s === 'Returned');
                                const hasReturnRequest = itemStatuses.some(s => ['ReturnRequested', 'ReturnApproved'].includes(s));
                                
                                let currentOverallStatus = order.orderStatus;
                                if (hasDelivered) {
                                    currentOverallStatus = 'Delivered';
                                } else if (allReturned) {
                                    currentOverallStatus = 'Returned';
                                } else if (!hasDelivered && hasReturnRequest) {
                                    // Keep the most relevant current status if returns are in progress but not all items are returned
                                    // This prevents showing "Returned" prematurely.
                                }

                                const currentStatusIndex = statuses.indexOf(currentOverallStatus);
                            %>
                
                            <% statuses.forEach((status, index) => { %>
                                <div class="timeline-item <%= index < currentStatusIndex ? 'completed' : (index === currentStatusIndex ? 'active' : '') %>">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-title"><%= status %></div>
                                    <% if (status === 'Ordered') { %>
                                        <div class="timeline-date"><%= new Date(order.createdAt).toLocaleString() %></div>
                                    <% } else { %>
                                        <% 
                                            const historyEntry = order.statusHistory.find(h => h.status === status);
                                        %>
                                        <% if (historyEntry) { %>
                                            <div class="timeline-date"><%= new Date(historyEntry.date).toLocaleString() %></div>
                                        <% } else if (index > currentStatusIndex) { %>
                                            <div class="timeline-date">Pending</div>
                                        <% } %>
                                    <% } %>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>

                
            </section>
        </main>
    </div>

    <script>
        // Toggle sidebar
        const menuToggle = document.querySelector('.menu-toggle');
        const sidebar = document.querySelector('.sidebar');
        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-open');
        });
    </script>
</body>
</html>
