<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoezy-Orders</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/adminordersPage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        .button-wrapper {
            display: flex;
            justify-content: flex-end;
            height: 50px;
        }

        .view-request-btn {
            background-color: #007bff;
            color: white;
            padding: 6px 12px;
            border: black;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .view-request-btn:hover {
            background-color: #0056b3;
        }
        .form-actions {
            display: flex;
            align-items: center;
            gap: 10px;
        }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

            <!-- Main Content -->
            <main class="main-content">
                <header class="header">
                    <div class="header-left">
                        <button class="menu-toggle" id="menuToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                    <div class="header-right">
                        <div class="notification">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="admin-profile">
                            <i class="fas fa-user-circle"></i>
                            <span>ADMIN</span>
                        </div>
                    </div>
                </header>

                <!-- Breadcrumb Navigation -->
                <%- include('../partials/admin/breadcrumb', { currentPath: '/admin/orders' }) %>

                    <section class="dashboard-content">
                        <!-- Orders Section -->
                        <div class="orders-section">
                            <h3>Orders Management</h3>
                            <form id="searchForm" class="search-section" method="GET" action="/admin/orders">
                                <div class="search-container">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" id="searchInput" name="search" class="search-input" placeholder="   Search orders..." value='<%= search %>'>
                                </div>
                                <div class="form-actions">
                                    <div class="sort-container">
                                        <label for="sortSelect" class="sort-label">
                                            <i class="fas fa-sort-alpha-down"></i> Sort:
                                        </label>
                                        <select id="sortSelect" class="sort-select" name="sort" onchange="this.form.submit()">
                                            <option value="date_desc" <% if (sort === 'date_desc') { %>selected<% } %>>Newest</option>
                                            <option value="date_asc" <% if (sort === 'date_asc') { %>selected<% } %>>Oldest</option>
                                            <option value="amount_desc" <% if (sort === 'amount_desc') { %>selected<% } %>>Amount (High to Low)</option>
                                            <option value="amount_asc" <% if (sort === 'amount_asc') { %>selected<% } %>>Amount (Low to High)</option>
                                        </select>
                                    </div>
                                    <div class="search-buttons">
                                        <button type="submit" class="search-btn">Apply</button>
                                        <a href="/admin/orders" class="clear-btn">Clear</a>
                                    </div>
                                    <div class="button-wrapper">
                                        <a href="/admin/orders/returnRequests"><button type="button" class="view-request-btn">View
                                                Request</button></a>
                                    </div>
                                </div>
                            </form>

                            <div class="table-container">
                                <table class="orders-table">
                                    <thead>
                                        <tr>
                                            <th>SI No</th>
                                            <th>Order ID</th>
                                            <th>Customer</th>
                                            <th>Date</th>
                                            <th>Total Amount</th>
                                            <th>Order Status</th>
                                            <th>Payment Method</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (orders && orders.length> 0) { %>
                                            <% for(let i=0; i < orders.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= (currentPage - 1) * 5 + i + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= orders[i].orderNumber %>
                                                    </td>
                                                    <td>
                                                        <div class="customer-info">
                                                            <strong>
                                                                <%= orders[i].userId ? orders[i].userId.fullname : 'N/A'
                                                                    %>
                                                            </strong>
                                                            <small>
                                                                <%= orders[i].userId ? orders[i].userId.email : 'N/A' %>
                                                            </small>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <%= new Date(orders[i].createdAt).toLocaleDateString('en-US', {
                                                            year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                                    </td>
                                                    <td>₹<%= orders[i].finalAmount.toLocaleString() %>
                                                    </td>
                                                    <td class="status">
                                                        <% const statusIcons={ 'Pending'
                                                            : '<i class="fas fa-clock"></i>' , 'Processing'
                                                            : '<i class="fas fa-spinner"></i>' , 'Shipped'
                                                            : '<i class="fas fa-truck"></i>' , 'Delivered'
                                                            : '<i class="fas fa-check-circle"></i>' , 'Cancelled'
                                                            : '<i class="fas fa-times-circle"></i>' ,'Returned'
                                                            : '<i class="fas fa-undo"></i>' }; const
                                                            statusIcon=statusIcons[orders[i].orderStatus]
                                                            || '<i class="fas fa-clock"></i>' ; %>
                                                            <%- statusIcon %>
                                                                <%= orders[i].orderStatus %>
                                                    </td>
                                                    <td>
                                                        <%= orders[i].paymentMethod %>
                                                    </td>
                                                    <td class="action">
                                                        <select class="action-dropdown"
                                                            onchange="updateOrderStatus('<%= orders[i]._id %>', this)"
                                                            <%=['Delivered', 'Cancelled' , 'Returned'
                                                            ].includes(orders[i].orderStatus) ? 'disabled' : '' %>>
                                                            <option value="" disabled selected>Select Status</option>
                                                            <option value="Pending" <%=orders[i].orderStatus==='Pending'
                                                                ? 'selected' : '' %>>Pending</option>
                                                            <option value="Processing"
                                                                <%=orders[i].orderStatus==='Processing' ? 'selected'
                                                                : '' %>>Processing</option>
                                                            <option value="Shipped" <%=orders[i].orderStatus==='Shipped'
                                                                ? 'selected' : '' %>>Shipped</option>
                                                            <option value="Delivered"
                                                                <%=orders[i].orderStatus==='Delivered' ? 'selected' : ''
                                                                %>>Delivered</option>
                                                            <option value="Cancelled"
                                                                <%=orders[i].orderStatus==='Cancelled' ? 'selected' : ''
                                                                %>>Cancelled</option>
                                                        </select>

                                                        <!-- ✅ Fixed link with order ID -->
                                                        <a href="/admin/orders/orderDetails/<%= orders[i]._id %>"
                                                            class="view-icon" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>

                                                </tr>
                                                <% } %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="8" class="no-orders">
                                                                <div class="no-orders-message">
                                                                    <i class="fas fa-shopping-bag"></i>
                                                                    <h3>No orders found</h3>
                                                                    <p>No orders have been placed yet.</p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination - Now always visible -->
                            <div class="pagination-section">
                                <div class="pagination-info">
                                    <% if (totalOrders > 0) { %>
                                        Showing <%= (currentPage - 1) * 5 + 1 %> to <%= Math.min(currentPage * 5, totalOrders) %> of <%= totalOrders %> orders
                                    <% } else { %>
                                        No orders found
                                    <% } %>
                                </div>

                                <div class="pagination-controls">
                                    <!-- Prev Button -->
                                    <button class="pagination-btn" onclick="goToPage(<%= currentPage - 1 %>)"
                                        <%= currentPage <= 1 ? 'disabled' : '' %>>
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </button>

                                    <!-- Page Numbers -->
                                    <div class="page-numbers">
                                        <% if (totalPages > 0) { %>
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <button class="page-btn <%= i === currentPage ? 'active' : '' %>"
                                                    onclick="goToPage(<%= i %>)">
                                                    <%= i %>
                                                </button>
                                            <% } %>
                                        <% } else { %>
                                            <button class="page-btn active">1</button>
                                        <% } %>
                                    </div>

                                    <!-- Next Button -->
                                    <button class="pagination-btn" onclick="goToPage(<%= currentPage + 1 %>)"
                                        <%= currentPage >= totalPages ? 'disabled' : '' %>>
                                        Next <i class="fas fa-chevron-right"></i>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </section>
            </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function goToPage(page) {
            if (page >= 1 && page <= <%= totalPages %>) {
                window.location.href = `/admin/orders?page=${page}`;
            }
        }

        async function updateOrderStatus(orderId, selectElement) {
            const status = selectElement.value;
            let reason = '';

            // Prompt for cancellation reason if status is Cancelled
            if (status.toLowerCase() === 'cancelled') {
                const { value: inputReason } = await Swal.fire({
                    title: 'Cancellation Reason',
                    input: 'textarea',
                    inputLabel: 'Please provide a reason for cancellation',
                    inputPlaceholder: 'Enter cancellation reason...',
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                    cancelButtonText: 'Cancel',
                    inputValidator: (value) => {
                        if (!value) {
                            return 'Cancellation reason is required!';
                        }
                    }
                });

                if (!inputReason) {
                    selectElement.value = ''; // Reset dropdown
                    return;
                }
                reason = inputReason;
            }

            try {
                const response = await fetch(`/admin/orders/${orderId}/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ orderId, status, reason })
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Status Updated!',
                        text: result.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: result.message || 'Failed to update order status.'
                    });
                    selectElement.value = ''; // Reset dropdown
                }
            } catch (error) {
                console.error('Error updating order status:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to update order status. Please try again.'
                });
                selectElement.value = ''; // Reset dropdown
            }
        }
    </script>
</body>

</html>