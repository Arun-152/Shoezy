<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoezy-Orders</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/adminordersPage.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
 <%- include('../partials/admin/sidebar') %>

        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <div class="header-left">
                    <button class="menu-toggle" id="menuToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                <div class="header-right">
                    <div class="notification">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div class="admin-profile">
                        <i class="fas fa-user-circle"></i>
                        <span>ADMIN</span>
                    </div>
                </div>
            </header>

            <!-- Breadcrumb Navigation -->
            <%- include('../partials/admin/breadcrumb', { currentPath: '/admin/orders' }) %>

            <section class="dashboard-content">
                <!-- Orders Section -->
                <div class="orders-section">
                    <h3>Orders Management</h3>
                    <div class="table-container">
                        <table class="orders-table">
                            <thead>
                                <tr>
                                    <th>SI No</th>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>ORD001</td>
                                    <td>John Doe</td>
                                    <td>2025-08-05</td>
                                    <td class="status"><i class="fas fa-clock"></i> Pending</td>
                                    <td class="action">
                                        <select class="action-dropdown" onchange="updateStatus(this)">
                                            <option value="Pending" selected>Pending</option>
                                            <option value="Processing">Processing</option>
                                            <option value="Shipped">Shipped</option>
                                            <option value="Delivered">Delivered</option>
                                            <option value="Canceled">Canceled</option>
                                        </select>
                                        <a href="#" class="view-icon"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>ORD002</td>
                                    <td>Jane Smith</td>
                                    <td>2025-08-04</td>
                                    <td class="status"><i class="fas fa-spinner"></i> Processing</td>
                                    <td class="action">
                                        <select class="action-dropdown" onchange="updateStatus(this)">
                                            <option value="Pending">Pending</option>
                                            <option value="Processing" selected>Processing</option>
                                            <option value="Shipped">Shipped</option>
                                            <option value="Delivered">Delivered</option>
                                            <option value="Canceled">Canceled</option>
                                        </select>
                                        <a href="#" class="view-icon"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>ORD003</td>
                                    <td>Mike Johnson</td>
                                    <td>2025-08-03</td>
                                    <td class="status"><i class="fas fa-truck"></i> Shipped</td>
                                    <td class="action">
                                        <select class="action-dropdown" onchange="updateStatus(this)">
                                            <option value="Pending">Pending</option>
                                            <option value="Processing">Processing</option>
                                            <option value="Shipped" selected>Shipped</option>
                                            <option value="Delivered">Delivered</option>
                                            <option value="Canceled">Canceled</option>
                                        </select>
                                        <a href="#" class="view-icon"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination">
                        <button class="page-btn">‹</button>
                        <button class="page-btn active">1</button>
                        <button class="page-btn">2</button>
                        <button class="page-btn">3</button>
                        <button class="page-btn">›</button>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Modal -->
    <div class="modal" id="offerModal" style="display: none;">
        <div class="modal-content">
            <h3>Add/Edit Offer</h3>
            <span class="close-btn" onclick="closeModal()">&times;</span>
            <form>
                <div class="form-group">
                    <label>Product Name:</label>
                    <input type="text" placeholder="Enter product name">
                </div>
                <div class="form-group">
                    <label>Category:</label>
                    <select>
                        <option>Select Category</option>
                        <option>Formal</option>
                        <option>Casual</option>
                        <option>Boots</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Brand:</label>
                    <input type="text" placeholder="Enter brand">
                </div>
            </form>
        </div>
    </div>

    <script>
        function updateStatus(selectElement) {
            // Get the selected status value
            const newStatus = selectElement.value;
            // Get the parent row of the select element
            const row = selectElement.closest('tr');
            // Find the status cell in the same row
            const statusCell = row.querySelector('.status');
            // Define icons for each status
            const statusIcons = {
                'Pending': '<i class="fas fa-clock"></i>',
                'Processing': '<i class="fas fa-spinner"></i>',
                'Shipped': '<i class="fas fa-truck"></i>',
                'Delivered': '<i class="fas fa-check-circle"></i>',
                'Canceled': '<i class="fas fa-times-circle"></i>'
            };
            // Update the status cell with the new status and corresponding icon
            statusCell.innerHTML = `${statusIcons[newStatus]} ${newStatus}`;
        }
    </script>