        <div class="modal-content">
            <div class="modal-header">
                <h3>Order Products</h3>
                <button class="close-modal" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Product details will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        // Sample data for demonstration
        const sampleOrders = [
            {
                id: "65ccf44117c052011295d6b",
                date: "2025-09-19",
                customer: "anvarsha",
                paymentMethod: "Online",
                coupon: "COUPON10",
                totalAmount: 0,
                discount: 423,
                netAmount: -423,
                status: "cancelled",
                products: [
                    { name: "Nike Air Max", quantity: 1, price: 9000 }
                ]
            },
            {
                id: "65ccf44117c052011295d7c",
                date: "2025-09-18",
                customer: "maria",
                paymentMethod: "Online",
                coupon: "-",
                totalAmount: 12000,
                discount: 0,
                netAmount: 12000,
                status: "delivered",
                products: [
                    { name: "Adidas Sneakers", quantity: 1, price: 7000 },
                    { name: "Puma Sports Shoes", quantity: 1, price: 5000 }
                ]
            },
            {
                id: "65ccf44117c052011295d8d",
                date: "2025-09-17",
                customer: "rahul",
                paymentMethod: "Wallet",
                coupon: "SAVE20",
                totalAmount: 8500,
                discount: 1700,
                netAmount: 6800,
                status: "delivered",
                products: [
                    { name: "Formal Shoes", quantity: 1, price: 8500 }
                ]
            },
            {
                id: "65ccf44117c052011295d9e",
                date: "2025-09-16",
                customer: "david",
                paymentMethod: "COD",
                coupon: "-",
                totalAmount: 15000,
                discount: 0,
                netAmount: 15000,
                status: "pending",
                products: [
                    { name: "Running Shoes", quantity: 2, price: 6000 },
                    { name: "Casual Sneakers", quantity: 1, price: 3000 }
                ]
            },
            {
                id: "65ccf44117c052011295daf",
                date: "2025-09-15",
                customer: "anu",
                paymentMethod: "Online",
                coupon: "FIRST15",
                totalAmount: 5600,
                discount: 840,
                netAmount: 4760,
                status: "delivered",
                products: [
                    { name: "Boots", quantity: 1, price: 5600 }
                ]
            }
        ];

        let currentPage = 1;
        let filteredOrders = [...sampleOrders];

        // Toggle sidebar
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.querySelector('.sidebar');
        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-open');
        });

        // Export functions
        function exportData(format) {
            alert(`Exporting data as ${format.toUpperCase()}...`);
            // Here you would implement actual export functionality
        }

        // Filter functions
        function applyFilters() {
            const dateFilter = document.getElementById('dateFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const paymentFilter = document.getElementById('paymentFilter').value;
            const customerSearch = document.getElementById('customerSearch').value.toLowerCase();
            const sortBy = document.getElementById('sortBy').value;

            filteredOrders = sampleOrders.filter(order => {
                const matchesStatus = statusFilter === 'all' || order.status === statusFilter;
                const matchesPayment = paymentFilter === 'all' || order.paymentMethod.toLowerCase() === paymentFilter;
                const matchesCustomer = !customerSearch || order.customer.toLowerCase().includes(customerSearch);
                
                return matchesStatus && matchesPayment && matchesCustomer;
            });

            // Sort orders
            filteredOrders.sort((a, b) => {
                switch(sortBy) {
                    case 'date':
                        return new Date(b.date) - new Date(a.date);
                    case 'amount':
                        return b.netAmount - a.netAmount;
                    case 'customer':
                        return a.customer.localeCompare(b.customer);
                    case 'status':
                        return a.status.localeCompare(b.status);
                    default:
                        return 0;
                }
            });

            updateTable();
            updateSummaryCards();
        }

        function clearFilters() {
            document.getElementById('dateFilter').value = 'all';
            document.getElementById('statusFilter').value = 'all';
            document.getElementById('paymentFilter').value = 'all';
            document.getElementById('customerSearch').value = '';
            document.getElementById('sortBy').value = 'date';
            filteredOrders = [...sampleOrders];
            updateTable();
            updateSummaryCards();
        }

        // Table search
        document.getElementById('tableSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#salesTableBody .table-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Update table with filtered data
        function updateTable() {
            const tbody = document.getElementById('salesTableBody');
            tbody.innerHTML = '';

            filteredOrders.forEach(order => {
                const row = document.createElement('tr');
                row.className = 'table-row';
                
                const statusClass = `status-${order.status}`;
                const paymentIcon = getPaymentIcon(order.paymentMethod);
                
                row.innerHTML = `
                    <td><span class="order-id">${order.id}</span></td>
                    <td>${order.date}</td>
                    <td>${order.customer}</td>
                    <td><span class="payment-method">${paymentIcon} ${order.paymentMethod}</span></td>
                    <td>${order.coupon}</td>
                    <td>₹${order.totalAmount.toLocaleString()}</td>
                    <td>₹${order.discount.toLocaleString()}</td>
                    <td>₹${order.netAmount.toLocaleString()}</td>
                    <td><span class="status-badge ${statusClass}">${order.status.toUpperCase()}</span></td>
                    <td><button class="view-products-btn" onclick="viewProducts('${order.id}')">${order.products.length} item(s)</button></td>
                `;
                tbody.appendChild(row);
            });
        }

        function getPaymentIcon(method) {
            switch(method.toLowerCase()) {
                case 'online': return '<i class="fas fa-credit-card"></i>';
                case 'cod': return '<i class="fas fa-money-bill"></i>';
                case 'wallet': return '<i class="fas fa-wallet"></i>';
                default: return '<i class="fas fa-credit-card"></i>';
            }
        }

        // Update summary cards based on filtered data
        function updateSummaryCards() {
            const deliveredOrders = filteredOrders.filter(order => order.status === 'delivered');
            const totalSales = deliveredOrders.reduce((sum, order) => sum + order.netAmount, 0);
            const totalOrders = deliveredOrders.length;
            const totalProducts = deliveredOrders.reduce((sum, order) => sum + order.products.length, 0);
            const totalDiscounts = filteredOrders.reduce((sum, order) => sum + order.discount, 0);
            const totalReturns = 0; // Assuming no returns in sample data
            const netRevenue = totalSales - totalReturns;

            // Update the display values (in a real app, you'd update the actual DOM elements)
            console.log('Summary updated:', {
                totalSales,
                totalOrders,
                totalProducts,
                totalDiscounts,
                totalReturns,
                netRevenue
            });
        }

        // Pagination functions
        function goToPage(page) {
            currentPage = page;
            document.querySelectorAll('.pagination-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            updatePageInfo();
        }

        function changePage(direction) {
            const newPage = currentPage + direction;
            if (newPage >= 1 && newPage <= 5) { // Assuming 5 pages max
                goToPage(newPage);
            }
        }

        function updatePageInfo() {
            const start = (currentPage - 1) * 5 + 1;
            const end = Math.min(currentPage * 5, filteredOrders.length);
            document.getElementById('pageInfo').textContent = `${start}-${end} of ${filteredOrders.length} results`;
        }

        // View products modal
        function viewProducts(orderId) {
            const order = sampleOrders.find(o => o.id === orderId);
            if (!order) return;

            const modal = document.getElementById('productModal');
            const modalBody = document.getElementById('modalBody');
            
            modalBody.innerHTML = `
                <div class="products-list">
                    <h4>Order ID: ${orderId}</h4>
                    <div class="products-grid">
                        ${order.products.map(product => `
                            <div class="product-item">
                                <div class="product-info">
                                    <h5>${product.name}</h5>
                                    <p>Quantity: ${product.quantity}</p>
                                    <p>Price: ₹${product.price.toLocaleString()}</p>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            
            modal.style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('productModal').style.display = 'none';
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            updateTable();
            updatePageInfo();
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            const modal = document.getElementById('productModal');
            if (event.target === modal) {
                closeModal();
            }
        });
    </script>

