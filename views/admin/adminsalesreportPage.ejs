<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/adminproductsPage.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6f9;
        }







        /* Sales Summary Cards */
        .sales-summary {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 15px;
            transition: transform 0.3s;
            min-width: 0;
            /* Prevent card overflow */
        }

        .summary-card:hover {
            transform: translateY(-5px);
        }

        .summary-card i {
            font-size: 30px;
            color: white;
            background-color: #3498db;
            padding: 15px;
            border-radius: 50%;
            flex-shrink: 0;
            /* Prevent icon shrinking */
        }

        .summary-card .card-content h3 {
            font-size: 16px;
            color: #34495e;
            margin-bottom: 5px;
        }

        .summary-card .card-content p {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
            white-space: nowrap;
            /* Prevent text wrapping */
            overflow: hidden;
            text-overflow: ellipsis;
            /* Handle long text */
        }

        /* Filters & Controls */
        .filters-controls {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            /* Prevent internal overflow */
        }

        .filters-controls h2 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .filters-controls form {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
            /* Allow wrapping for smaller screens */
        }

        .filters-controls select,
        .filters-controls input[type="date"] {
            padding: 10px;
            border: 1px solid #dcdcdc;
            border-radius: 5px;
            font-size: 14px;
            min-width: 120px;
            /* Ensure inputs don't shrink too much */
        }

        .filters-controls button {
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .filters-controls button:hover {
            background-color: #2980b9;
        }

        /* Sales Table */
        .sales-table {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
            /* Allow horizontal scrolling for table */
        }

        .sales-table table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
            /* Ensure table doesn't shrink too much */
        }

        .sales-table th {
            background-color: #3498db;
            color: white;
            padding: 15px;
            text-align: left;
            font-size: 14px;
        }

        .sales-table td {
            padding: 15px;
            border-bottom: 1px solid #f1f1f1;
            font-size: 14px;
            color: #2c3e50;
            white-space: nowrap;
            /* Prevent text wrapping */
        }

        .sales-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .sales-table tr:hover {
            background-color: #f1f4f8;
        }

        /* Existing CSS styles preserved */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
        }

        .main-content {
            flex: 1;
            padding: 20px;
        }

        .navbar {
            background: #34495e;
            color: white;
            padding: 10px 20px;
        }

        .navbar h1 {
            margin: 0;
            font-size: 24px;
        }

        .breadcrumbs {
            margin: 10px 0;
            font-size: 14px;
        }

        .breadcrumbs a {
            color: #3498db;
            text-decoration: none;
        }

        .stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat-box {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 5px;
            flex: 1;
            text-align: center;
        }

        .filters {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .filters select,
        .filters input {
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .filters button {
            padding: 8px 16px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .filters button.clear {
            background: #e74c3c;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background: #3498db;
            color: white;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 5px;
            width: 400px;
        }

        .modal-content h2 {
            margin-top: 0;
        }

        .modal-content button {
            padding: 8px 16px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sales-summary {
                grid-template-columns: repeat(2, 1fr);
                /* 2 cards per row */
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .navbar,
            .main-content {
                margin-left: 200px;
                width: calc(100% - 200px);
            }

            .sales-summary {
                grid-template-columns: 1fr;
                /* 1 card per row */
            }

            .filters-controls form {
                flex-direction: column;
                align-items: flex-start;
            }

            .filters-controls select,
            .filters-controls input[type="date"],
            .filters-controls button {
                width: 100%;
                /* Full width for form elements */
            }
        }

        @media (max-width: 576px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .navbar,
            .main-content {
                margin-left: 0;
                width: 100%;
            }

            .sales-table table {
                min-width: 100%;
                /* Fit table to container */
            }
        }
    </style>
</head>

<body>


    <div class="dashboard-container">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

            <!-- Main Content -->
            <main class="main-content">
                <header class="header">
                    <div class="header-left">
                        <button class="menu-toggle" id="menuToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                    <div class="header-right">
                        <div class="notification">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="admin-profile">
                            <i class="fas fa-user-circle"></i>
                            <span>ADMIN</span>
                        </div>
                    </div>
                </header>

                <!-- Breadcrumb Navigation -->
                <%- include('../partials/admin/breadcrumb', { currentPath: '/admin/salesreport' }) %>

                    <div class="page-content">
                        <div class="page-header">
                            <h1>Sales Report</h1>
                        </div>

                        <!-- Sales Summary -->
                        <div class="sales-summary">
                            <div class="summary-card">
                                <i class="fas fa-dollar-sign"></i>
                                <div class="card-content">
                                    <h3>Total Revenue</h3>
                                    <p>$45,231</p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-shopping-cart"></i>
                                <div class="card-content">
                                    <h3>Orders</h3>
                                    <p>1,234</p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-users"></i>
                                <div class="card-content">
                                    <h3>Customers</h3>
                                    <p>892</p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-chart-line"></i>
                                <div class="card-content">
                                    <h3>Avg. Order Value</h3>
                                    <p>$36.65</p>
                                </div>
                            </div>
                        </div>

                        <!-- Filters & Controls -->
                        <div class="filters">
                            <h3>Filters & Controls</h3>
                            <select name="date-filter">
                                <option value="all-time">All Time</option>
                                <option value="daily">Daily</option>
                                <option value="weekly">Weekly</option>
                                <option value="monthly">Monthly</option>
                            </select>
                            <select name="order-status">
                                <option value="all-status">All Status</option>
                                <option value="completed">Completed</option>
                                <option value="pending">Pending</option>
                            </select>
                            <select name="payment-method">
                                <option value="all-methods">All Methods</option>
                                <option value="credit-card">Credit Card</option>
                                <option value="paypal">PayPal</option>
                                <option value="bank-transfer">Bank Transfer</option>
                            </select>
                            <input type="text" name="search-customer" placeholder="Customer name or email">
                            <select name="sort-by">
                                <option value="date-newest">Date (Newest First)</option>
                                <option value="date-oldest">Date (Oldest First)</option>
                            </select>
                            <button class="apply">Apply Filters</button>
                            <button class="clear">Clear</button>
                        </div>

                        <!-- Detailed Sales Table -->
                        <div class="sales-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Order Date</th>
                                        <th>Customer Name</th>
                                        <th>Payment Method</th>
                                        <th>Coupon Used</th>
                                        <th>Total Amount</th>
                                        <th>Discount</th>
                                        <th>Net Paid Amount</th>
                                        <th>Order Status</th>
                                        <th>Products List</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#12345</td>
                                        <td>2023-10-01</td>
                                        <td>John Smith</td>
                                        <td>Credit Card</td>
                                        <td>SAVE10</td>
                                        <td>$50.00</td>
                                        <td>$5.00</td>
                                        <td>$45.00</td>
                                        <td>Completed</td>
                                        <td><button
                                                onclick="showModal('12345', '$50.00', 'SAVE10', '2023-10-01', 'Widget A: 2')">View
                                                Products</button></td>
                                    </tr>
                                    <tr>
                                        <td>#12346</td>
                                        <td>2023-10-02</td>
                                        <td>Jane Doe</td>
                                        <td>PayPal</td>
                                        <td>None</td>
                                        <td>$25.00</td>
                                        <td>$0.00</td>
                                        <td>$25.00</td>
                                        <td>Pending</td>
                                        <td><button
                                                onclick="showModal('12346', '$25.00', 'None', '2023-10-02', 'Widget B: 1')">View
                                                Products</button></td>
                                    </tr>
                                    <tr>
                                        <td>#12347</td>
                                        <td>2023-10-03</td>
                                        <td>Bob Johnson</td>
                                        <td>Bank Transfer</td>
                                        <td>FREE15</td>
                                        <td>$75.00</td>
                                        <td>$15.00</td>
                                        <td>$60.00</td>
                                        <td>Completed</td>
                                        <td><button
                                                onclick="showModal('12347', '$75.00', 'FREE15', '2023-10-03', 'Widget C: 3')">View
                                                Products</button></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="modal" id="orderModal">
                                <div class="modal-content">
                                    <h2>Order Details</h2>
                                    <p><strong>Order ID:</strong> <span id="modalOrderId"></span></p>
                                    <p><strong>Order Price:</strong> <span id="modalOrderPrice"></span></p>
                                    <p><strong>Coupon Applied:</strong> <span id="modalCoupon"></span></p>
                                    <p><strong>Date:</strong> <span id="modalDate"></span></p>
                                    <p><strong>Product Quantity:</strong> <span id="modalProductQuantity"></span></p>
                                    <button onclick="closeModal()">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        function showModal(orderId, orderPrice, coupon, date, productQuantity) {
                            document.getElementById('modalOrderId').textContent = orderId;
                            document.getElementById('modalOrderPrice').textContent = orderPrice;
                            document.getElementById('modalCoupon').textContent = coupon;
                            document.getElementById('modalDate').textContent = date;
                            document.getElementById('modalProductQuantity').textContent = productQuantity;
                            document.getElementById('orderModal').style.display = 'flex';
                        }

                        function closeModal() {
                            document.getElementById('orderModal').style.display = 'none';
                        }
                    </script>
</body>

</html>