            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
            /* Fixed layout for consistent column widths */
        }

        .sales-table th {
            background-color: #3498db;
            color: white;
            padding: 12px 8px;
            text-align: left;
            font-size: 13px;
            font-weight: 600;
        }

        .sales-table td {
            padding: 12px 8px;
            border-bottom: 1px solid #f1f1f1;
            font-size: 13px;
            color: #2c3e50;
