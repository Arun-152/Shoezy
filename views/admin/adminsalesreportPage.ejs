            .sales-summary {
                grid-template-columns: repeat(2, 1fr);
                /* 2 cards per row */
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .navbar,
            .main-content {
                margin-left: 200px;
                width: calc(100% - 200px);
            }

            .sales-summary {
                grid-template-columns: 1fr;
