    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6f9;
        }







        /* Sales Summary Cards */
        .sales-summary {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 15px;
            transition: transform 0.3s;
            min-width: 0;
            /* Prevent card overflow */
        }

        .summary-card:hover {
            transform: translateY(-5px);
        }

        .summary-card i {
            font-size: 30px;
            color: white;
            background-color: #3498db;
            padding: 15px;
            border-radius: 50%;
            flex-shrink: 0;
            /* Prevent icon shrinking */
        }

        .summary-card .card-content h3 {
            font-size: 16px;
            color: #34495e;
            margin-bottom: 5px;
        }

        .summary-card .card-content p {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
            white-space: nowrap;
            /* Prevent text wrapping */
            overflow: hidden;
            text-overflow: ellipsis;
            /* Handle long text */
        }

        /* Filters & Controls */
        .filters-controls {
            background-color: white;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            /* Prevent internal overflow */
        }

        .filters-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .filters-header h2 {
            margin: 0;
            font-size: 18px;
            color: #2c3e50;
        }

        .export-buttons {
            display: flex;
            gap: 10px;
        }

        .export-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .export-pdf {
            background-color: #e74c3c;
            color: white;
        }

        .export-pdf:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

        .export-excel {
            background-color: #27ae60;
            color: white;
        }

        .export-excel:hover {
            background-color: #229954;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }
/* Modal background */
.modal {
  display: none; /* Hidden by default */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); /* Dark overlay */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* Modal box */
.modal-content {
  background: #fff;
  width: 500px;
  max-width: 90%;
  border-radius: 12px;
  padding: 25px 30px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
  animation: fadeIn 0.3s ease-in-out;
  font-family: "Segoe UI", Tahoma, sans-serif;
  color: #333;
}

/* Title */
.modal-content h2 {
  margin-top: 0;
  margin-bottom: 15px;
  font-size: 22px;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
}

/* Sub-title */
.modal-content h3 {
  margin-top: 20px;
  font-size: 18px;
  color: #34495e;
}

/* Paragraphs */
.modal-content p {
  font-size: 15px;
  margin: 8px 0;
  line-height: 1.5;
}

/* Product list */
#modalProductList {
  list-style: none;
  padding: 0;
  margin-top: 10px;
}

#modalProductList li {
  background: #f9f9f9;
  margin: 6px 0;
  padding: 8px 12px;
  border-radius: 6px;
  font-size: 14px;
  border-left: 4px solid #4CAF50; /* Accent color */
}

/* Close button */
.modal-content button {
  margin-top: 20px;
  background: #4CAF50;
  color: #fff;
  border: none;
  padding: 10px 18px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.modal-content button:hover {
  background: #45a049;
  transform: scale(1.05);
}

/* Animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

