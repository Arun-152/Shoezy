<body>


    <div class="dashboard-container">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

            <!-- Main Content -->
            <main class="main-content">
                <header class="header">
                    <div class="header-left">
                        <button class="menu-toggle" id="menuToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                    <div class="header-right">
                        <div class="notification">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="admin-profile">
                            <i class="fas fa-user-circle"></i>
                            <span>ADMIN</span>
                        </div>
                    </div>
                </header>

                <!-- Breadcrumb Navigation -->
                <%- include('../partials/admin/breadcrumb', { currentPath: '/admin/salesreport' }) %>

                    <div class="page-content">
                        <div class="page-header">
                            <h1>Sales Report</h1>
                        </div>

                        <!-- Sales Summary -->
                        <div class="sales-summary">
                            <div class="summary-card">
                                <i class="fas fa-rupee-sign"></i>
                                <div class="card-content">
                                    <h3>Total Sales</h3>
                                    <p>₹<%= summary.totalSales.toFixed(2) %></p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-shopping-cart"></i>
                                <div class="card-content">
                                    <h3>Total Orders</h3>
                                    <p><%= summary.totalOrders %></p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-box"></i>
                                <div class="card-content">
                                    <h3>Products Sold</h3>
                                    <p><%= summary.productsSold %></p>
                                </div>
                            </div>
                            <div class="summary-card">
                                <i class="fas fa-chart-line"></i>
                                <div class="card-content">
                                    <h3>Net Revenue</h3>
                                    <p>₹<%= summary.netRevenue.toFixed(2) %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Filters & Controls -->
                        <div class="filters-controls">
                            <div class="filters-header">
                                <h2>Filter Sales Report</h2>
                                <div class="export-buttons">
                                    <button type="button" id="exportPdfBtn" class="export-btn export-pdf">
                                        <i class="fas fa-file-pdf"></i> Export PDF
                                    </button>
                                    <button type="button" id="exportExcelBtn" class="export-btn export-excel">
                                        <i class="fas fa-file-excel"></i> Export Excel
                                    </button>
                                </div>
                            </div>
                            
                            <form id="filterForm" action="/admin/salesreport" method="GET">
                                <div class="filters-form">
                                    <div class="filter-group">
                                        <label for="timeRangeSelect">Time Range</label>
                                        <select name="timeRange" id="timeRangeSelect">
                                            <option value="" <%= filters.timeRange === '' ? 'selected' : '' %>>Select Time Range</option>
                                            <option value="daily" <%= filters.timeRange === 'daily' ? 'selected' : '' %>>Daily</option>
                                            <option value="weekly" <%= filters.timeRange === 'weekly' ? 'selected' : '' %>>Weekly</option>
                                            <option value="monthly" <%= filters.timeRange === 'monthly' ? 'selected' : '' %>>Monthly</option>
                                            <option value="yearly" <%= filters.timeRange === 'yearly' ? 'selected' : '' %>>Yearly</option>
                                        </select>
                                    </div>

                                    <div class="filter-group">
                                        <label for="startDate">Start Date</label>
                                        <input type="date" name="startDate" id="startDate" value="<%= filters.startDate || '' %>">
                                    </div>

                                    <div class="filter-group">
                                        <label for="endDate">End Date</label>
                                        <input type="date" name="endDate" id="endDate" value="<%= filters.endDate || '' %>">
                                    </div>

                                    <div class="filter-group">
                                        <label for="status">Order Status</label>
                                        <select name="status" id="status">
                                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All Status</option>
                                            <option value="Pending" <%= filters.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Processing" <%= filters.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                            <option value="Shipped" <%= filters.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="Delivered" <%= filters.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                            <option value="Cancelled" <%= filters.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                            <option value="ReturnRequested" <%= filters.status === 'ReturnRequested' ? 'selected' : '' %>>Return Requested</option>
                                            <option value="Returned" <%= filters.status === 'Returned' ? 'selected' : '' %>>Returned</option>
                                            <option value="ReturnApproved" <%= filters.status === 'ReturnApproved' ? 'selected' : '' %>>Return Approved</option>
                                        </select>
                                    </div>

                                    <div class="filter-group">
                                        <label for="payment">Payment Method</label>
                                        <select name="payment" id="payment">
                                            <option value="all" <%= filters.payment === 'all' ? 'selected' : '' %>>All Methods</option>
                                            <option value="cod" <%= filters.payment === 'cod' ? 'selected' : '' %>>COD</option>
                                            <option value="online" <%= filters.payment === 'online' ? 'selected' : '' %>>Online</option>
                                            <option value="wallet" <%= filters.payment === 'wallet' ? 'selected' : '' %>>Wallet</option>
                                        </select>
                                    </div>

                                    <div class="filter-group">
                                        <label for="search">Search</label>
                                        <input type="text" name="search" id="search" placeholder="Order ID or Customer Name" value="<%= filters.search || '' %>">
                                    </div>

                                    <div class="filter-group">
                                        <label for="sort">Sort By</label>
                                        <select name="sort" id="sort">
                                            <option value="date-newest" <%= filters.sort === 'date-newest' ? 'selected' : '' %>>Date (Newest First)</option>
                                            <option value="date-oldest" <%= filters.sort === 'date-oldest' ? 'selected' : '' %>>Date (Oldest First)</option>
                                            <option value="amount-low" <%= filters.sort === 'amount-low' ? 'selected' : '' %>>Amount (Low to High)</option>
                                            <option value="amount-high" <%= filters.sort === 'amount-high' ? 'selected' : '' %>>Amount (High to Low)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="filter-actions">
                                    <button type="submit">Apply Filters</button>
                                    <button type="button" class="clear" onclick="window.location.href='/admin/salesreport'">Clear Filters</button>
                                </div>
                            </form>
                        </div>

                        <!-- Detailed Sales Table -->
                        <div class="sales-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Order Date</th>
                                        <th>Customer Name</th>
                                        <th>Payment Method</th>
                                        <th>Coupon Used</th>
                                        <th>Total Amount</th>
                                        <th>Discount</th>
                                        <th>Net Paid Amount</th>
                                        <th>Order Status</th>
                                        <th>Products List</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% salesData.forEach(order => { %>
                                        <tr>
                                            <td><div class="order-id-cell"><%= order.id %></div></td>
                                            <td><%= new Date(order.date).toLocaleDateString() %></td>
                                            <td><div class="customer-name-cell"><%= order.customerName %></div></td>
                                            <td><%= order.paymentMethod %></td>
                                            <td><%= order.couponUsed || 'N/A' %></td>
                                            <td>₹<%= order.totalAmount.toFixed(2) %></td>
                                            <td>₹<%= order.discount.toFixed(2) %></td>
                                            <td>₹<%= order.netPaidAmount.toFixed(2) %></td>
                                            <td><%= order.status %></td>
                                            <td>
                                                <button class="view-products-btn" data-order='<%= JSON.stringify(order) %>'>View Products</button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            <div class="modal" id="orderModal">
                                <div class="modal-content">
                                    <h2>Order Details</h2>
                                    <p><strong>Order ID:</strong> <span id="modalOrderId"></span></p>
                                    <p><strong>Order Date:</strong> <span id="modalOrderDate"></span></p>
                                    <p><strong>Coupon Applied:</strong> <span id="modalCouponApplied"></span></p>
                                    <p><strong>Coupon Discount:</strong> <span id="modalCouponDiscount"></span></p>
                                    <p><strong>Order Total Price:</strong> <span id="modalOrderTotalPrice"></span></p>
                                    <h3>Products:</h3>
                                    <ul id="modalProductList"></ul>
                                    <button onclick="closeModal()">Close</button>
                                </div>
                            </div>
                            <!-- Pagination -->
                            <% if (pagination.totalPages > 1) { %>
                                <div class="pagination-container">
                                    <div class="pagination-info">
                                        Page <%= pagination.currentPage %> of <%= pagination.totalPages %> (<%= pagination.totalCount %> items)
                                    </div>
                                    <div class="pagination-links">
                                        <% 
                                            const createUrl = (page) => {
                                                const params = new URLSearchParams();
                                                if (filters.timeRange) params.set('timeRange', filters.timeRange);
                                                if (filters.startDate) params.set('startDate', filters.startDate);
                                                if (filters.endDate) params.set('endDate', filters.endDate);
                                                if (filters.status) params.set('status', filters.status);
                                                if (filters.payment) params.set('payment', filters.payment);
                                                if (filters.search) params.set('search', filters.search);
                                                if (filters.sort) params.set('sort', filters.sort);
                                                params.set('page', page);
                                                return `/admin/salesreport?${params.toString()}`;
                                            };
                                        %>

                                        <% if (pagination.currentPage > 1) { %>
                                            <a href="<%= createUrl(1) %>" class="pagination-link">« First</a>
                                            <a href="<%= createUrl(pagination.currentPage - 1) %>" class="pagination-link">‹ Previous</a>
                                        <% } %>
                            
                                        <% 
                                        const maxPagesToShow = 5;
                                        const startPage = Math.max(1, pagination.currentPage - Math.floor(maxPagesToShow / 2));
                                        const endPage = Math.min(pagination.totalPages, startPage + maxPagesToShow - 1);
                                        %>

                                        <% for(let i = startPage; i <= endPage; i++) { %>
                                            <a href="<%= createUrl(i) %>" class="pagination-link <%= i === pagination.currentPage ? 'active' : '' %>"><%= i %></a>
                                        <% } %>
                            
                                        <% if (pagination.currentPage < pagination.totalPages) { %>
                                            <a href="<%= createUrl(pagination.currentPage + 1) %>" class="pagination-link">Next ›</a>
                                            <a href="<%= createUrl(pagination.totalPages) %>" class="pagination-link">Last »</a>
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            document.querySelectorAll('.view-products-btn').forEach(button => {
                                button.addEventListener('click', function() {
                                    const order = JSON.parse(this.dataset.order);
                                    
                                    document.getElementById('modalOrderId').textContent = order.id;
                                    document.getElementById('modalOrderDate').textContent = new Date(order.date).toLocaleDateString();
                                    document.getElementById('modalCouponApplied').textContent = order.couponUsed || 'N/A';
                                    document.getElementById('modalCouponDiscount').textContent = order.discount || 'N/A';
                                    document.getElementById('modalOrderTotalPrice').textContent = '₹' + order.totalAmount.toFixed(2);

                                    const productList = document.getElementById('modalProductList');
                                    productList.innerHTML = ''; // Clear previous products
                                    order.products.forEach(product => {
                                        const listItem = document.createElement('li');
                                        listItem.textContent = `${product.name} (Qty: ${product.quantity}, Price: ₹${product.price.toFixed(2)})`;
                                        productList.appendChild(listItem);
                                    });

                                    document.getElementById('orderModal').style.display = 'flex';
                                });
                            });

                            // Time range filter buttons
                            document.querySelectorAll('.time-filter-btn').forEach(button => {
                                button.addEventListener('click', function() {
                                    document.getElementById('timeRangeInput').value = this.dataset.timeRange;
                                    document.getElementById('filterForm').submit();
                                });
                            });

                            // Export buttons
                            document.getElementById('exportPdfBtn').addEventListener('click', () => exportReport('pdf'));
                            document.getElementById('exportExcelBtn').addEventListener('click', () => exportReport('excel'));

                            function exportReport(format) {
                                const form = document.getElementById('filterForm');
                                const formData = new FormData(form);
                                const params = new URLSearchParams();

                                for (const pair of formData) {
                                    if (pair[1]) { // Only include parameters that have a value
                                        params.append(pair[0], pair[1]);
                                    }
                                }
                                // Ensure startDate and endDate are included if they have values, even if timeRange is set
                                if (form.elements.startDate.value) {
                                    params.set('startDate', form.elements.startDate.value);
                                }
                                if (form.elements.endDate.value) {
                                    params.set('endDate', form.elements.endDate.value);
                                }
                                // If a timeRange is active, ensure it's passed
                                if (form.elements.timeRange.value) {
                                    params.set('timeRange', form.elements.timeRange.value);
                                }


                                window.location.href = `/admin/salesreport/export/${format}?${params.toString()}`;
                            }
                        });

                        function closeModal() {
                            document.getElementById('orderModal').style.display = 'none';
                        }
                    </script>
</body>

</html>

               