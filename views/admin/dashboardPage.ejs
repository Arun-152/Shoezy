<body>
    <div class="dashboard-container">
        <%- include('../partials/admin/sidebar') %>
            <div class="main-content">
                <header class="header">
                    <button class="menu-toggle"><i class="fas fa-bars"></i></button>
                    <div class="header-right">
                        <i class="fas fa-bell notification"></i>
                        <div class="admin-profile">
                            <i class="fas fa-user-circle"></i>
                            ADMIN
                        </div>
                    </div>
                </header>
                <%- include('../partials/admin/breadcrumb', { currentPath: '/admin/Dashboard' }) %>
                <section class="dashboard-content">
                    <div class="main-column">
                        <div class="stats-grid">
                            <div class="stat-card total-customers">
                                <div class="stat-info">
                                    <h3>Total Customers</h3>
                                    <h2 class="stat-value">
                                        <%= totalCustomers %>
                                    </h2>
                                </div>
                                <i class="fas fa-users"></i>
                            </div>

                            <div class="stat-card total-revenue">
                                <div class="stat-info">
                                    <h3>Total Revenue</h3>
                                    <h2 class="stat-value">
                                        <%= totalRevenue %>
                                    </h2>
                                </div>
                                <i class="fas fa-rupee-sign"></i>
                            </div>

                            <div class="stat-card total-orders">
                                <div class="stat-info">
                                    <h3>Total Orders</h3>
                                    <h2 class="stat-value">
                                        <%= totalOrders %>
                                    </h2>
                                </div>
                                <i class="fas fa-shopping-cart"></i>
                            </div>

                            <div class="stat-card total-products">
                                <div class="stat-info">
                                    <h3>Total Products</h3>
                                    <h2 class="stat-value">
                                        <%= totalProducts %>
                                    </h2>
                                </div>
                                <i class="fas fa-box"></i>
                            </div>

                        </div>
                        <div class="chart-section">
                            <div class="chart-header">
                                <h3>Sales Overview</h3>
                                <div class="chart-controls">
                                    <div class="chart-period">
                                        <button class="period-btn active" data-period="weekly">Weekly</button>
                                        <button class="period-btn" data-period="monthly">Monthly</button>
                                        <button class="period-btn" data-period="yearly">Yearly</button>
                                    </div>
                                </div>
                            </div>
                            <div class="chart-canvas-container">
                                <canvas id="salesChart"></canvas>
                            </div>
                        </div>

                        <div class="orders-section">
                            <h3>Order Status</h3>
                            <div class="order-status-grid">
                                <div class="status-card pending">
                                    <div class="status-icon"><i class="fas fa-clock"></i></div>
                                    <h4>Pending</h4>
                                    <h2>
                                        <%= pending %>
                                    </h2>
                                </div>
                                <div class="status-card processing">
                                    <div class="status-icon"><i class="fas fa-spinner"></i></div>
                                    <h4>Processing</h4>
                                    <h2>
                                        <%= processing %>
                                    </h2>
                                </div>
                                <div class="status-card shipped">
                                    <div class="status-icon"><i class="fas fa-truck"></i></div>
                                    <h4>Shipped</h4>
                                    <h2>
                                        <%= shipped %>
                                    </h2>
                                </div>
                                <div class="status-card delivered">
                                    <div class="status-icon"><i class="fas fa-check-circle"></i></div>
                                    <h4>Delivered</h4>
                                    <h2>
                                        <%= delivered %>
                                    </h2>
                                </div>


                            </div>
                            <div class="recent-orders">
                                <div class="section-header">
                                    <h3>Recent Orders</h3>
                                    <a href="#">View All →</a>
                                </div>
                                <div class="table-container">
                                    <table class="orders-table">
                                        <thead>
                                            <tr>
                                                <th>Order ID</th>
                                                <th>Customer</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% recentOrdersData.forEach(order=> { %>
                                                <tr>
                                                    <td>
                                                        <%= order.orderNumber %>
