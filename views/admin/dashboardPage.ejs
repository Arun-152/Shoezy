                </section>
            </div>
    </div>
    <script>
        // Data from EJS
        const chartData = <%- JSON.stringify(chartData) %>;

        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('salesChart').getContext('2d');
            const periodBtns = document.querySelectorAll('.period-btn');

            const salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartData.weekly.labels,
                    datasets: [{
                        label: 'Sales',
                        data: [], // Will be populated by updateChart
                        backgroundColor: 'rgba(74, 144, 226, 0.2)',
                        borderColor: 'rgba(74, 144, 226, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(74, 144, 226, 1)',
                        pointBorderColor: '#fff',
                        pointHoverRadius: 6,
                        fill: true, // Fills the area under the line
                        tension: 0.4 // Creates smooth curves
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100, // Fix the Y-axis max at 100%
                            ticks: {
                                stepSize: 20, // Set steps to 20
                                callback: function (value) {
                                    return value + '%'; // Display as percentage
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    // Access original value from the stored dataset property
                                    const originalValue = context.dataset.originalData[context.dataIndex];
                                    const percentage = context.parsed.y.toFixed(1);
                                    const formattedValue = originalValue.toLocaleString('en-IN');
                                    return `Sales: ₹${formattedValue} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });

            // --- Percentage Conversion Logic ---
            // Find the maximum value for each period to set the 100% mark dynamically.
            const maxWeekly = Math.max(...chartData.weekly.values, 1); // Use 1 to avoid division by zero
            const maxMonthly = Math.max(...chartData.monthly.values, 1);
            const maxYearly = Math.max(...chartData.yearly.values, 1);

            // Convert absolute sales values to percentages.
            const weeklyPercentages = chartData.weekly.values.map(v => (v / maxWeekly) * 100);
            const monthlyPercentages = chartData.monthly.values.map(v => (v / maxMonthly) * 100);
            const yearlyPercentages = chartData.yearly.values.map(v => (v / maxYearly) * 100);
            // --- End Percentage Conversion ---

            function updateChart(period) {
                salesChart.data.labels = chartData[period].labels;
                salesChart.data.datasets[0].originalData = chartData[period].values; // Store original data for tooltip
                if (period === 'weekly') salesChart.data.datasets[0].data = weeklyPercentages;
                if (period === 'monthly') salesChart.data.datasets[0].data = monthlyPercentages;
                if (period === 'yearly') salesChart.data.datasets[0].data = yearlyPercentages;
                salesChart.update();
            }

            periodBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    periodBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    const period = this.dataset.period;
                    updateChart(period);
                });
            });

            // Sidebar toggle logic
            const menuToggle = document.querySelector('.menu-toggle');
            const sidebar = document.querySelector('.sidebar');
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', () => sidebar.classList.toggle('sidebar-open'));
            }
            updateChart('weekly'); // Initialize chart with weekly data
        });
    </script>
</body>

