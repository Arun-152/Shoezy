        .dashboard-content {
            padding: 30px;
            display: flex;
            gap: 30px;
        }

        .main-column {
            flex: 1;
        }

        .dashboard-bottom {
            display: flex;
            gap: 20px;
            /* space between left and right */
            margin-top: 40px;
            /* optional spacing from content above */
        }

        .left-column,
